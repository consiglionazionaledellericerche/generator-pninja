<?php
namespace App\Http\Controllers;

use App\Models\AcRule;
use App\Traits\HandlesApiErrors;
use App\Traits\HandlesUserRoles;
use Illuminate\Http\Request;
use Illuminate\Validation\Rule;

class AcRuleController extends Controller
{
    use HandlesApiErrors;
    use HandlesUserRoles;

    public function index(Request $request)
    {
        try {
            $search = $request->has('search') ? ScoutQuerySanitizer::sanitize($request->get('search')) : null;
            $perPage = min($request->get('per_page', 10), 100);
            $sortBy = $request->get('sort_by', 'id');
            $sortDirection = $request->get('sort_direction', 'asc');

            if ($request->has('ids') && !empty($request->get('ids'))) {
                $ids = explode(',', $request->get('ids'));
                $result = AcRule::whereIn('id', $ids)
                    ->orderBy($sortBy, $sortDirection)
                    ->paginate($perPage);
                return response()->json($result);
            }

            if ($search) {
                $result = AcRule::search($search)
                    ->orderBy($sortBy, $sortDirection)
                    ->paginate($perPage);
            } else {
                $result = AcRule::query()
                    ->orderBy($sortBy, $sortDirection)
                    ->paginate($perPage);
            }

            return response()->json($result);
        } catch (\Exception $e) {
            return $this->handleIndexError($e);
        }
    }

    public function show($id)
    {
        try {
            $acRule = AcRule::findOrFail($id);
            return response()->json($acRule);
        } catch (\Exception $e) {
            return $this->handleShowError($e);
        }
    }

    public function store(Request $request)
    {
        try {
            $validated = $request->validate([
                'ptype' => [
                    'string',
                    'required',
                ],
                'v0' => [
                    'string',
                    'nullable',
                ],
                'v1' => [
                    'string',
                    'nullable',
                ],
                'v2' => [
                    'string',
                    'nullable',
                ],
                'v3' => [
                    'string',
                    'nullable',
                ],
                'v4' => [
                    'string',
                    'nullable',
                ],
                'v5' => [
                    'string',
                    'nullable',
                ],
            ]);
            $data = $validated;

            $acRule = AcRule::create($data);
            return response()->json($acRule, 201);
        } catch (\Exception $e) {
            return $this->handleCreateError($e);
        }
    }

    public function update($id, Request $request)
    {
        try {
            $acRule = AcRule::findOrFail($id);

            $validated = $request->validate([
                'ptype' => [
                    'string',
                    'required',
                ],
                'v0' => [
                    'string',
                    'nullable',
                ],
                'v1' => [
                    'string',
                    'nullable',
                ],
                'v2' => [
                    'string',
                    'nullable',
                ],
                'v3' => [
                    'string',
                    'nullable',
                ],
                'v4' => [
                    'string',
                    'nullable',
                ],
                'v5' => [
                    'string',
                    'nullable',
                ],
            ]);
            $data = $validated;
            $acRule->update($data);
            return response()->json($acRule, 200);
        } catch (\Exception $e) {
            return $this->handleUpdateError($e);
        }
    }

    public function destroy($id)
    {
        try {
            $acRule = AcRule::findOrFail($id);
            $acRule->delete();
            return response(null, 200);
        } catch (\Exception $e) {
            return $this->handleDeleteError($e);
        }
    }

}