<?php

namespace App\Providers;

use Casbin\Enforcer;
use Illuminate\Support\ServiceProvider;

class CasbinServiceProvider extends ServiceProvider
{
    public function register()
    {
        $this->app->singleton(Enforcer::class, function ($app) {
<%  if (casbinApproach === 'casbin') { -%>
        $adapter = DatabaseAdapter::newAdapter([
            'driver' => 'pdo_' . config('database.default'),
            'pdo' => DB::connection()->getPdo(),
            'policy_table_name' => 'casbin_rules'
        ]);
        
        return new Enforcer(
            storage_path('casbin/model.conf'),
            $adapter
        );
<%  } else { -%>
            return new Enforcer(
                storage_path('casbin/model.conf'),
                storage_path('casbin/policy.csv')
            );
<% } %>
        });
    }
}