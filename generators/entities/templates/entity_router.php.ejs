$router->group(['prefix' => 'api'], function () use ($router) {
    $router->get('<%- rootPath %>',  ['uses' => '<%- className %>Controller@readAll']);
    
    $router->get('<%- rootPath %>/{id}', ['uses' => '<%- className %>Controller@read']);
    
    $router->post('<%- rootPath %>', ['uses' => '<%- className %>Controller@create']);
    
    $router->delete('<%- rootPath %>/{id}', ['uses' => '<%- className %>Controller@delete']);
    
    $router->put('<%- rootPath %>/{id}', ['uses' => '<%- className %>Controller@update']);
});