import { createWebHistory, createRouter } from "vue-router";

// COMPONENTS
import HomePage from '@/components/HomePage.vue';
<% entities.forEach(function(entity) { %>
import <%= entity.name %>Component from '@/components/entities/<%= entity.variable %>/<%= entity.name %>Component.vue';
import <%= entity.name %>DetailsComponent from '@/components/entities/<%= entity.variable %>/<%= entity.name %>DetailsComponent.vue';
import <%= entity.name %>EditComponent from '@/components/entities/<%= entity.variable %>/<%= entity.name %>EditComponent.vue';
<% }); %>
// Keycloak returns a long ass path everytime, so we need to filter them out.
const filterPath = (to: any, from: any, next: any) => {
  if (to.fullPath !== to.path) {
    next({ path: to.path });
  }

  next();
};

const routes = [
  {
    path: "/",
    name: "homepage",
    component: HomePage,
    beforeEnter: filterPath
  }<% entities.forEach(function(entity) { %>,
  {
    path: "/<%= entity.path %>",
    name: "<%= entity.path %>",
    component: <%= entity.name %>Component,
    beforeEnter: filterPath
  },
  {
    path: "/<%= entity.path %>/:id",
    name: "<%= entity.path %>-details",
    component: <%= entity.name %>DetailsComponent,
    beforeEnter: filterPath
  },
  {
    path: "/<%= entity.path %>/new",
    name: "<%= entity.path %>-new",
    component: <%= entity.name %>EditComponent,
    beforeEnter: filterPath
  },
  {
    path: "/<%= entity.path %>/edit/:id",
    name: "<%= entity.path %>-edit",
    component: <%= entity.name %>EditComponent,
    beforeEnter: filterPath
  }<% }); %> 
];

const router = createRouter({
  history: createWebHistory(),
  routes
});

export default router