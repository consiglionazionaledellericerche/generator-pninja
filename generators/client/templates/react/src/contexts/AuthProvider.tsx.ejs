import React, { useEffect, useState, ReactNode } from 'react';
import { User, AuthContextType } from '../types/auth';
import { AuthContext } from './AuthContext';
import axiosInstance from '../shared/axiosInstance';

interface AuthState {
  isAuthenticated: boolean;
  user: User | null;
  loading: boolean;
  error: string | null;
}

interface AuthProviderProps {
  children: ReactNode;
}

export const AuthProvider: React.FC<AuthProviderProps> = ({ children }) => {
  const [authState, setAuthState] = useState<AuthState>({
    isAuthenticated: false,
    user: null,
    loading: true,
    error: null,
  });

  useEffect(() => {
    const checkSession = async () => {
      try {
        console.log('üîç Checking server session...');

        const urlParams = new URLSearchParams(window.location.search);
        const authSuccess = urlParams.get('auth_success');

        if (authSuccess === 'true') {
          console.log('‚úÖ Auth success detected in URL');
          const newUrl =
            window.location.pathname +
            (window.location.search
              ? window.location.search.replace(/auth_success=true&?/, '').replace(/\?$/, '')
              : '') +
            window.location.hash;
          window.history.replaceState({}, document.title, newUrl);
        }

        const response = await axiosInstance.get('/api/auth/check-session', {
          withCredentials: true, // Include i cookie di sessione
        });

        if (response.status === 200 && response.data.isAuthenticated) {
          console.log('‚úÖ Active session found:', response.data.user.name);

          setAuthState({
            isAuthenticated: true,
            user: response.data.user,
            loading: false,
            error: null,
          });
        } else {
          console.log('‚ùå No active session found');
          setAuthState({
            isAuthenticated: false,
            user: null,
            loading: false,
            error: null,
          });
        }
      } catch (error) {
        console.error('‚ùå Session check error:', error);
        setAuthState({
          isAuthenticated: false,
          user: null,
          loading: false,
          error: 'Session check error',
        });
      }
    };

    checkSession();
  }, []);

  const login = async (): Promise<{ success: boolean; error?: string }> => {
    try {
      console.log('üöÄ Starting login process...');
      const currentUrl = window.location.href;

      const response = await axiosInstance.post(
        '/api/auth/initiate-login',
        { redirect_url: currentUrl },
        { withCredentials: true }
      );

      console.log('üîó Redirecting to Keycloak...');
      window.location.href = response.data.authUrl;

      return { success: true };
    } catch (error) {
      console.error('‚ùå Login start error:', error);

      setAuthState((prev) => ({
        ...prev,
        loading: false,
        error: 'Login start error',
      }));

      return {
        success: false,
        error: 'Login start error',
      };
    }
  };

  const logout = async (): Promise<void> => {
    try {
      console.log('üëã Logging out...');

      const response = await axiosInstance.post(
        '/api/auth/logout',
        {},
        {
          headers: {
            'X-CSRF-TOKEN': await getCsrfToken(),
          },
          withCredentials: true,
        }
      );

      setAuthState({
        isAuthenticated: false,
        user: null,
        loading: false,
        error: null,
      });

      if (response.status === 200 && response.data.logoutUrl) {
        console.log('üîó Redirecting to Keycloak logout...');
        window.location.href = response.data.logoutUrl;
      }
    } catch (error) {
      console.error('‚ùå Logout error:', error);

      setAuthState({
        isAuthenticated: false,
        user: null,
        loading: false,
        error: null,
      });
    }
  };

  const getCsrfToken = async (): Promise<string> => {
    try {
      const response = await axiosInstance.get('/api/auth/csrf-token', {
        withCredentials: true,
      });

      if (response.status === 200) {
        return response.data.csrf_token;
      }
    } catch (error) {
      console.warn('Failed to get CSRF token:', error);
    }
    return '';
  };

  const contextValue: AuthContextType = {
    ...authState,
    tokens: null,
    login,
    logout,
    refreshTokens: async () => {
      throw new Error('Token refresh not needed with session auth');
    },
  };

  return <AuthContext.Provider value={contextValue}>{children}</AuthContext.Provider>;
};
