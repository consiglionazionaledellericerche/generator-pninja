import { useCallback } from 'react';
import { useAuthState } from './useAuthState'; // CORRETTO: stesso folder hooks/

export class HttpError extends Error {
  status: number;
  data: unknown;
  details?: string | undefined | null;

  constructor(
    status: number,
    message: string,
    details?: string | null | undefined,
    data?: unknown
  ) {
    super(message);
    this.status = status;
    this.data = data;
    this.details = details;
    this.name = 'HttpError';
  }
}

interface FetchOptions extends RequestInit {
  headers?: Record<string, string>;
}

export const useApi = () => {
  const { login } = useAuthState(); // CORRETTO: usa useAuthState

  // Base function for authenticated API calls (MOLTO semplificato!)
  const authenticatedFetch = useCallback(
    async (url: string, options: FetchOptions = {}): Promise<Response> => {
      try {
        // Con le sessioni Ã¨ semplicissimo!
        const headers = {
          ...options.headers,
          'Content-Type': options.headers?.['Content-Type'] || 'application/json',
        };

        const response = await fetch(url, {
          ...options,
          headers,
          credentials: 'include', // IMPORTANTE: include sempre i cookies di sessione
        });

        // Handle HTTP errors
        if (!response.ok) {
          if (response.status === 401) {
            console.log('ðŸ”„ Session expired, redirecting to login...');
            login(); // Avvia il flusso di login
            throw new Error('Session expired');
          }

          // Handle other HTTP errors
          const errorData = await response.json().catch(() => null);
          throw new HttpError(
            response.status,
            errorData?.message || `HTTP Error! Status: ${response.status}`,
            errorData?.details,
            errorData
          );
        }

        return response;
      } catch (error) {
        console.error('ðŸš« API request error:', error);
        throw error;
      }
    },
    [login]
  );

  // Utility methods for common CRUD operations (identici al tuo codice!)

  // GET
  const get = useCallback(
    async <T>(url: string, options: Omit<FetchOptions, 'method'> = {}): Promise<T> => {
      const response = await authenticatedFetch(url, {
        ...options,
        method: 'GET',
      });
      return response.json();
    },
    [authenticatedFetch]
  );

  // POST
  const post = useCallback(
    async <T>(
      url: string,
      data: unknown,
      options: Omit<FetchOptions, 'method' | 'body'> = {}
    ): Promise<T> => {
      const response = await authenticatedFetch(url, {
        ...options,
        method: 'POST',
        body: JSON.stringify(data),
      });
      return response.json();
    },
    [authenticatedFetch]
  );

  // PUT
  const put = useCallback(
    async <T>(
      url: string,
      data: unknown,
      options: Omit<FetchOptions, 'method' | 'body'> = {}
    ): Promise<T> => {
      const response = await authenticatedFetch(url, {
        ...options,
        method: 'PUT',
        body: JSON.stringify(data),
      });
      return response.json();
    },
    [authenticatedFetch]
  );

  // DELETE
  const del = useCallback(
    async <T>(url: string, options: Omit<FetchOptions, 'method'> = {}): Promise<T> => {
      const response = await authenticatedFetch(url, {
        ...options,
        method: 'DELETE',
      });
      return response.json();
    },
    [authenticatedFetch]
  );

  // PATCH
  const patch = useCallback(
    async <T>(
      url: string,
      data: unknown,
      options: Omit<FetchOptions, 'method' | 'body'> = {}
    ): Promise<T> => {
      const response = await authenticatedFetch(url, {
        ...options,
        method: 'PATCH',
        body: JSON.stringify(data),
      });
      return response.json();
    },
    [authenticatedFetch]
  );

  return {
    fetch: authenticatedFetch,
    get,
    post,
    put,
    delete: del,
    patch,
  };
};
