import { useCallback } from 'react';
import { tokenStorage, isTokenExpiringSoon } from '../utils/tokenStore';
import { useAuthState } from '../hooks/useAuthState';

export class HttpError extends Error {
  status: number;
  data: unknown;
  details?: string | undefined | null;

  constructor(
    status: number,
    message: string,
    details?: string | null | undefined,
    data?: unknown
  ) {
    super(message);
    this.status = status;
    this.data = data;
    this.details = details;
    this.name = 'HttpError';
  }
}

interface FetchOptions extends RequestInit {
  headers?: Record<string, string>;
}

export const useApi = () => {
  const { refreshTokens, login } = useAuthState();

  // Base function for authenticated API calls
  const authenticatedFetch = useCallback(
    async (url: string, options: FetchOptions = {}): Promise<Response> => {
      try {
        let tokens = tokenStorage.getTokens();

        if (!tokens?.access_token) {
          console.error('No token available, redirecting to login');
          // Automatically start the login process
          login();
          throw new Error('Not authenticated');
        }

        // Refresh the token only if necessary
        let shouldRefresh = false;
        try {
          shouldRefresh = isTokenExpiringSoon(tokens.access_token, 60); // 60 seconds buffer
          if (shouldRefresh) {
            console.info('Token is about to expire, attempting automatic refresh...');
          }
        } catch (decodeError) {
          console.warn('Error while checking token expiration:', decodeError);
          // In case of error, proceed with the current token
        }

        // Refresh the token if necessary
        if (shouldRefresh) {
          try {
            tokens = await refreshTokens();
            console.info('Token successfully refreshed');
          } catch (refreshError) {
            console.error('Token refresh failed, using current token:', refreshError);
            // Continue with the last available token instead of failing immediately
          }
        }

        // Merge custom headers with Authorization
        const headers = {
          ...options.headers,
          Authorization: `Bearer ${tokens.access_token}`,
          'Content-Type': options.headers?.['Content-Type'] || 'application/json',
        };

        // Execute the request
        const response = await fetch(url, {
          ...options,
          headers,
          credentials: 'include',
        });

        // Handle HTTP errors
        if (!response.ok) {
          if (response.status === 401) {
            console.info('401 response, attempting refresh and retry...');
            try {
              // Attempt a more aggressive refresh in case of 401
              const newTokens = await refreshTokens();

              // Retry the request with the new token
              const retryResponse = await fetch(url, {
                ...options,
                headers: {
                  ...options.headers,
                  Authorization: `Bearer ${newTokens.access_token}`,
                  'Content-Type': options.headers?.['Content-Type'] || 'application/json',
                },
                credentials: 'include',
              });

              if (retryResponse.ok) {
                return retryResponse;
              }

              // If the second attempt also fails, it's likely
              // that the issue is not related to the token
              console.error('Second fetch attempt failed as well');
              throw new Error('Request failed even after token refresh');
            } catch (refreshError) {
              console.error('Token refresh failed during retry:', refreshError);
              throw new Error('Session expired');
            }
          }

          // Handle other HTTP errors
          const errorData = await response.json().catch(() => null);
          throw new HttpError(
            response.status,
            errorData?.message || `HTTP Error! Status: ${response.status}`,
            errorData?.details,
            errorData
          );
        }

        return response;
      } catch (error) {
        console.error('Error in authenticatedFetch request:', error);
        throw error;
      }
    },
    [refreshTokens, login]
  );

  // Utility methods for common CRUD operations

  // GET
  const get = useCallback(
    async <T>(url: string, options: Omit<FetchOptions, 'method'> = {}): Promise<T> => {
      const response = await authenticatedFetch(url, {
        ...options,
        method: 'GET',
      });
      return response.json();
    },
    [authenticatedFetch]
  );

  // POST
  const post = useCallback(
    async <T>(
      url: string,
      data: any,
      options: Omit<FetchOptions, 'method' | 'body'> = {}
    ): Promise<T> => {
      const response = await authenticatedFetch(url, {
        ...options,
        method: 'POST',
        body: JSON.stringify(data),
      });
      return response.json();
    },
    [authenticatedFetch]
  );

  // PUT
  const put = useCallback(
    async <T>(
      url: string,
      data: any,
      options: Omit<FetchOptions, 'method' | 'body'> = {}
    ): Promise<T> => {
      const response = await authenticatedFetch(url, {
        ...options,
        method: 'PUT',
        body: JSON.stringify(data),
      });
      return response.json();
    },
    [authenticatedFetch]
  );

  // DELETE
  const del = useCallback(
    async <T>(url: string, options: Omit<FetchOptions, 'method'> = {}): Promise<T> => {
      const response = await authenticatedFetch(url, {
        ...options,
        method: 'DELETE',
      });
      return response.json();
    },
    [authenticatedFetch]
  );

  // PATCH
  const patch = useCallback(
    async <T>(
      url: string,
      data: any,
      options: Omit<FetchOptions, 'method' | 'body'> = {}
    ): Promise<T> => {
      const response = await authenticatedFetch(url, {
        ...options,
        method: 'PATCH',
        body: JSON.stringify(data),
      });
      return response.json();
    },
    [authenticatedFetch]
  );

  return {
    fetch: authenticatedFetch,
    get,
    post,
    put,
    delete: del,
    patch,
  };
};
