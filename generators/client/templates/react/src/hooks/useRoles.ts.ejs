import { useCallback } from 'react';
import axios from 'axios'; // Importa axios

const getRolesFromSession = async (): Promise<string[]> => {
  try {
    const response = await axios.get('/api/user/roles', { withCredentials: true });
    return response.data?.roles || [];
  } catch (error) {
    console.error('Error getting roles from session:', error);
    return [];
  }
};

export const useRoles = () => {
  const getRoles = useCallback(async (): Promise<string[]> => {
    const userRoles = await getRolesFromSession();
    if (!userRoles) return [];
    return userRoles;
  }, []);

  return {
    getRoles,
  };
};
