import { useCallback } from 'react';
import { useKeycloak } from '@react-keycloak/web';

interface FetchOptions extends RequestInit {
  headers?: Record<string, string>;
}

export class HttpError extends Error {
    status: number;
    data: unknown;
    details?: string | undefined | null;

    constructor(
        status: number,
        message: string,
        details?: string | null | undefined,
        data?: unknown
    ) {
        super(message);
        this.status = status;
        this.data = data;
        this.details = details;
        this.name = 'HttpError';
    }
}

export const useAuthenticatedFetch = () => {
    const { keycloak } = useKeycloak();

    const authenticatedFetch = useCallback(async (url: string, options: FetchOptions = {}): Promise<Response> => {
        try {
            // Aggiorna il token se necessario
            try {
                await keycloak.updateToken(30);
            } catch {
                // Se il refresh fallisce, redirect al login
                keycloak.login();
                throw new Error('Session expired');
            }

            // Merge degli headers personalizzati con l'Authorization
            const headers = {
                ...options.headers,
                'Authorization': `Bearer ${keycloak.token}`,
                'Content-Type': 'application/json',
            };

            const response = await fetch(url, {
                ...options,
                headers,
            });

            if (!response.ok) {
                // Gestione errori HTTP
                if (response.status === 401) {
                    keycloak.login();
                    throw new Error('Unauthorized');
                }

                // Prova a leggere il corpo della risposta di errore
                const errorData = await response.json().catch(() => null);
                throw new HttpError(
                    response.status,
                    errorData?.message || `HTTP error! status: ${response.status}`,
                    errorData?.details,
                    errorData
                );
            }

            return response;
        } catch (error) {
            console.error('Fetch error:', error);
            throw error;
        }
    }, [keycloak]);

    return authenticatedFetch;
};