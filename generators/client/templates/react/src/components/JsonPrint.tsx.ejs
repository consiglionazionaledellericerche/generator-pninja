interface JsonPrintProps {
  data: unknown;
  pp?: boolean;
  className?: string;
}

export function JsonPrint({ data, pp = true, className = '' }: JsonPrintProps) {
  try {
    const jsonString = pp ? JSON.stringify(data, null, 2) : JSON.stringify(data);

    return (
      <pre
        className={`whitespace-pre text-xs bg-black text-lime-500 p-2 rounded-md overflow-auto ${className}`}
      >
        {jsonString}
      </pre>
    );
  } catch (error) {
    return (
      <pre className="whitespace-pre bg-red-800 text-xs text-white p-4 rounded-md">
        Error formatting JSON: {error instanceof Error ? error.message : 'Unknown error'}
      </pre>
    );
  }
}
