import { useState } from 'react';
import { useTranslation } from 'react-i18next';
import { LogIn, Loader } from 'lucide-react';

export function LoginButton() {
  const { t } = useTranslation();
  const [isLoggingIn, setIsLoggingIn] = useState(false);

  const handleLogin = async () => {
    try {
      setIsLoggingIn(true);

      const response = await fetch('/api/auth/initiate-login', {
        credentials: 'include',
      });

      if (!response.ok) {
        const errorText = await response.text();
        console.error('Errore di risposta:', errorText);
        throw new Error(`Errore nell'inizializzazione del login: ${response.status}`);
      }

      const data = await response.json();

      window.location.href = data.authUrl;
    } catch (error) {
      console.error('Errore durante il login:', error);
      setIsLoggingIn(false);
    }
  };

  return (
    <button
      onClick={handleLogin}
      disabled={isLoggingIn}
      className={`inline-flex items-center gap-1 nav-bar-link ${isLoggingIn ? 'opacity-70 cursor-not-allowed' : ''}`}
    >
      {isLoggingIn ? <Loader size={16} className="animate-spin" /> : <LogIn size={16} />}
      {isLoggingIn ? t('ui.account.loggingIn') : t('ui.account.login')}
    </button>
  );
}
