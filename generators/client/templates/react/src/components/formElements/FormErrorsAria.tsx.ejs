import { FieldError } from 'react-hook-form';
import { useTranslation } from 'react-i18next';
import { FieldError as FieldErrorAria } from 'react-aria-components';

interface FormErrorsProps {
  error: FieldError | undefined;
}

const FormErrorsAria: React.FC<FormErrorsProps> = ({ error }) => {
  const { t } = useTranslation();
  if (!error?.message) return null;
  const [message, accepted, actual] = error.message.split(':') || [];
  return (
    <FieldErrorAria className="block mt-1 text-sm bg-slate-50 dark:bg-slate-900 text-red-600 dark:text-red-500">
      {t(message, { accepted, actual: actual })}
    </FieldErrorAria>
  );
};

export { FormErrorsAria };
