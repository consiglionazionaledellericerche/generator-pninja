import { useState, useMemo } from 'react';
import { useTranslation } from 'react-i18next';
import { Eye, EyeOff, Sparkles, Copy, Check } from 'lucide-react';
import { RegisterOptions, FieldValues } from 'react-hook-form';
import { useFormContext, useController } from 'react-hook-form';
import { FormLabelAria as FormLabel, FormErrorsAria as FormErrors, FormFieldInfo } from './index';
import {
  Button,
  TextField as TextFieldAria,
  Input,
  TextFieldProps as TextFieldPropsAria,
} from 'react-aria-components';

interface PasswordFieldProps extends Omit<TextFieldPropsAria, 'isInvalid' | 'children'> {
  fieldName: string;
  label: string;
  placeholder?: string;
  validations?: {
    required?: boolean;
    strength?: boolean;
  };
  showGenerator?: boolean;
}

type PasswordStrengthLevel = 'weak' | 'medium' | 'strong';

interface PasswordStrength {
  level: PasswordStrengthLevel;
  score: number;
  isStrong: boolean;
}

const MIN_LENGTH = 8;
const GENERATED_PASSWORD_LENGTH = 16;

// Caratteri speciali comuni e facilmente accessibili su tastiere IT/EN/EU
const SPECIAL_CHARS_REGEX = /[!@#$%&*()_\-+=[\]{}:;'",.?/]/;
const SPECIAL_CHARS = '!@#$%&*()_-+=[]{}:;,.?/';
const UPPERCASE = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ';
const LOWERCASE = 'abcdefghijklmnopqrstuvwxyz';
const NUMBERS = '0123456789';
const ALL_CHARS = UPPERCASE + LOWERCASE + NUMBERS + SPECIAL_CHARS;

// Generatore di password sicura usando crypto API
const generateSecurePassword = (length: number = GENERATED_PASSWORD_LENGTH): string => {
  const password: string[] = [];

  const getRandomChar = (chars: string): string => {
    const array = new Uint32Array(1);
    crypto.getRandomValues(array);
    return chars[array[0] % chars.length];
  };

  // Aggiungi almeno uno di ogni tipo richiesto
  password.push(getRandomChar(UPPERCASE));
  password.push(getRandomChar(LOWERCASE));
  password.push(getRandomChar(NUMBERS));
  password.push(getRandomChar(SPECIAL_CHARS));

  // Riempi il resto con caratteri casuali
  for (let i = password.length; i < length; i++) {
    password.push(getRandomChar(ALL_CHARS));
  }

  // Mescola l'array per evitare pattern prevedibili
  for (let i = password.length - 1; i > 0; i--) {
    const array = new Uint32Array(1);
    crypto.getRandomValues(array);
    const j = array[0] % (i + 1);
    [password[i], password[j]] = [password[j], password[i]];
  }

  return password.join('');
};

const calculatePasswordStrength = (password: string): PasswordStrength => {
  const criteria = {
    minLength: password.length >= MIN_LENGTH,
    hasUppercase: /[A-Z]/.test(password),
    hasLowercase: /[a-z]/.test(password),
    hasNumbers: /\d/.test(password),
    hasSpecialChars: SPECIAL_CHARS_REGEX.test(password),
  };

  const score = Object.values(criteria).filter(Boolean).length;
  const isStrong = score === 5; // Tutti i criteri devono essere soddisfatti

  let level: PasswordStrengthLevel;
  if (score <= 2) level = 'weak';
  else if (score <= 4) level = 'medium';
  else level = 'strong';

  return { level, score, isStrong };
};

const PasswordField: React.FC<PasswordFieldProps> = ({
  fieldName,
  label,
  validations,
  showGenerator = true,
  ...ariaProps
}) => {
  const { t } = useTranslation();
  const { required, strength = true } = validations || {};

  const { control, setValue } = useFormContext();
  const rules: RegisterOptions<FieldValues, string> = {};
  const [showPassword, setShowPassword] = useState(false);
  const [copied, setCopied] = useState(false);

  // Regole di validazione
  if (required) {
    rules.required = 'errors.validations.required';
  }

  // Se strength è true, valida TUTTI i criteri
  if (strength) {
    rules.validate = {
      minLength: (value: string) =>
        value.length >= MIN_LENGTH || 'errors.validations.password.minLength',
      hasUppercase: (value: string) =>
        /[A-Z]/.test(value) || 'errors.validations.password.requireUppercase',
      hasLowercase: (value: string) =>
        /[a-z]/.test(value) || 'errors.validations.password.requireLowercase',
      hasNumbers: (value: string) =>
        /\d/.test(value) || 'errors.validations.password.requireNumbers',
      hasSpecialChars: (value: string) =>
        SPECIAL_CHARS_REGEX.test(value) || 'errors.validations.password.requireSpecialChars',
    };
  }

  const {
    field,
    fieldState: { error },
  } = useController({
    name: fieldName,
    control,
    rules,
  });

  // Calcola forza password (solo se strength è abilitato)
  const passwordStrength = useMemo(
    () => (strength ? calculatePasswordStrength(field.value || '') : null),
    [field.value, strength]
  );

  // Genera password sicura
  const handleGeneratePassword = () => {
    const newPassword = generateSecurePassword();
    setValue(fieldName, newPassword, { shouldValidate: true, shouldDirty: true });
  };

  // Copia password negli appunti
  const handleCopyPassword = async () => {
    if (field.value) {
      try {
        await navigator.clipboard.writeText(field.value);
        setCopied(true);
        setTimeout(() => setCopied(false), 2000);
      } catch (err) {
        console.error('Failed to copy password:', err);
      }
    }
  };

  return (
    <TextFieldAria
      isInvalid={!!error}
      isRequired={required}
      {...ariaProps}
      className="group"
      type={showPassword ? 'text' : 'password'}
    >
      <FormLabel validations={validations}>{label}</FormLabel>
      <div
        className={`flex items-center gap-1
    focus-within:outline-3
    focus-within:outline-offset-3 focus-within:outline-blue-600 focus-within:dark:outline-blue-500 rounded-md w-full mt-3 border-none bg-slate-200 text-slate-800 dark:bg-slate-600 dark:text-slate-200 placeholder-slate-600 dark:placeholder-slate-300 text-sm/6 py-1.5 px-3
    group-data-invalid:focus-within:inset-ring-0 group-data-invalid:focus-within:outline-3 group-data-invalid:focus-within:outline-offset-3 group-data-invalid:focus-within:outline-red-600 group-data-invalid:dark:focus-within:outline-red-500
    group-data-invalid:inset-ring-2 group-data-invalid:inset-ring-red-600 group-data-invalid:dark:inset-ring-red-500
          `}
      >
        <Input
          {...field}
          value={field.value || ''}
          className="outline-0 flex-1 border-none placeholder-slate-600 dark:placeholder-slate-300 font-[inherit]"
        />

        {/* Pulsante Genera Password */}
        {showGenerator && (
          <Button
            aria-label={t('password.generate')}
            onClick={handleGeneratePassword}
            className="text-sm text-center transition rounded-full border-0 p-1 flex items-center justify-center text-slate-600 dark:text-slate-300 bg-transparent hover:bg-black/15 pressed:bg-black/10 w-6"
          >
            <Sparkles aria-hidden="true" className="h-full" />
          </Button>
        )}

        {/* Pulsante Copia Password */}
        {field.value && (
          <Button
            aria-label={copied ? t('password.copied') : t('password.copy')}
            onClick={handleCopyPassword}
            className="text-sm text-center transition rounded-full border-0 p-1 flex items-center justify-center text-slate-600 dark:text-slate-300 bg-transparent hover:bg-black/15 pressed:bg-black/10 w-6"
          >
            {copied ? (
              <Check aria-hidden="true" className="h-full text-green-600 dark:text-green-400" />
            ) : (
              <Copy aria-hidden="true" className="h-full" />
            )}
          </Button>
        )}

        {/* Pulsante Mostra/Nascondi */}
        <Button
          aria-label={showPassword ? t('actions.hidePassword') : t('actions.showPassword')}
          onClick={() => {
            setShowPassword(!showPassword);
          }}
          className="text-sm text-center transition rounded-full border-0 p-1 flex items-center justify-center text-slate-600 dark:text-slate-300 bg-transparent hover:bg-black/15 pressed:bg-black/10 w-6 group-empty:invisible"
        >
          {showPassword ? (
            <EyeOff aria-hidden="true" className="h-full" />
          ) : (
            <Eye aria-hidden="true" className="h-full" />
          )}
        </Button>
      </div>

      {/* Indicatore di forza (mostrato solo se strength è true) */}
      {strength && field.value && passwordStrength && (
        <div className="mt-2">
          {/* Barra progressiva */}
          <div
            role="progressbar"
            aria-valuenow={passwordStrength.score}
            aria-valuemin={0}
            aria-valuemax={5}
            aria-label={t('password.strengthLabel')}
            className="h-2 bg-slate-200 dark:bg-slate-700 rounded-full overflow-hidden"
          >
            <div
              className={`h-full transition-all duration-300 ${
                passwordStrength.level === 'weak'
                  ? 'bg-red-500 w-1/3'
                  : passwordStrength.level === 'medium'
                    ? 'bg-yellow-700 dark:bg-yellow-500 w-2/3'
                    : 'bg-green-600 dark:bg-green-500 w-full'
              }`}
            />
          </div>

          {/* Testo stato */}
          <p
            className={`text-sm mt-1 font-medium ${
              passwordStrength.level === 'weak'
                ? 'text-red-600 dark:text-red-400'
                : passwordStrength.level === 'medium'
                  ? 'text-yellow-600 dark:text-yellow-400'
                  : 'text-green-600 dark:text-green-400'
            }`}
            aria-live="polite"
          >
            {t(`password.strength.${passwordStrength.level}`)}
          </p>

          {/* Lista criteri - SICURA: non rivela quali criteri sono soddisfatti */}
          {!passwordStrength.isStrong && (
            <ul className="text-sm mt-2 space-y-1 text-slate-700 dark:text-slate-300" role="list">
              <li>○ {t('password.criteria.minLength', { count: MIN_LENGTH })}</li>
              <li>○ {t('password.criteria.uppercase')}</li>
              <li>○ {t('password.criteria.lowercase')}</li>
              <li>○ {t('password.criteria.numbers')}</li>
              <li>○ {t('password.criteria.specialChars')}</li>
            </ul>
          )}

          {/* Solo quando la password è forte, mostra tutti i check verdi */}
          {passwordStrength.isStrong && (
            <ul className="text-sm mt-2 space-y-1 text-green-600 dark:text-green-400" role="list">
              <li>✓ {t('password.criteria.minLength', { count: MIN_LENGTH })}</li>
              <li>✓ {t('password.criteria.uppercase')}</li>
              <li>✓ {t('password.criteria.lowercase')}</li>
              <li>✓ {t('password.criteria.numbers')}</li>
              <li>✓ {t('password.criteria.specialChars')}</li>
            </ul>
          )}
        </div>
      )}

      <FormFieldInfo validations={validations || {}} />
      <FormErrors error={error} />
    </TextFieldAria>
  );
};

export { PasswordField };
