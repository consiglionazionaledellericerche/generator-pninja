import { useTranslation } from 'react-i18next';
import { useState } from 'react';
import { useFormContext } from 'react-hook-form';
import { FormLabel } from './FormLabel';
import { FormErrors } from './FormErrors';
import { Eye, EyeOff } from 'lucide-react';

interface PasswordFieldProps {
  fieldName: string;
  label: string;
  validations?: {
    required?: boolean;
  };
}

const PasswordField: React.FC<PasswordFieldProps> = ({ fieldName, label, validations }) => {
  const { t } = useTranslation();
  const { required } = validations || {};
  const {
    register,
    formState: { errors },
  } = useFormContext();
  const [showPassword, setShowPassword] = useState(false);

  return (
    <>
      <FormLabel htmlFor={fieldName} label={label} validations={validations} />
      <div className="grid grid-cols-1">
        <input
          type={showPassword ? 'text' : 'password'}
          id={fieldName}
          {...register(fieldName, {
            required: required ? 'errors.validations.required' : false,
          })}
          className={
            (errors?.[fieldName]?.message ? 'form-field-error' : 'form-field') +
            ' col-start-1 row-start-1'
          }
        />
        <button
          type="button"
          onClick={() => {
            setShowPassword(!showPassword);
          }}
          className="cursor-pointer col-start-1 row-start-1 mt-3 me-4 self-center justify-self-end size-5 sm:size-4"
          title={t('actions.generateUUID')}
        >
          {showPassword ? <EyeOff className="h-full" /> : <Eye className="h-full" />}
        </button>
      </div>
      <FormErrors errors={errors} fieldName={fieldName} />
    </>
  );
};

export { PasswordField };
