import { RegisterOptions, FieldValues } from 'react-hook-form';
import { useFormContext, useController } from 'react-hook-form';
import { FormLabelAria as FormLabel, FormErrorsAria as FormErrors } from './index';
import {
  TextField as TextFieldAria,
  TextFieldProps as TextFieldPropsAria,
  TextArea as TextAreaAria,
} from 'react-aria-components';
import RichTextEditor from './RichTextEditor';
import { JsonPrint } from '../JsonPrint';

const inputClassName = (hasErrors = false) =>
  `scheme-light dark:scheme-dark outline-0${hasErrors ? ' outline-2 -outline-offset-2 outline-red-500' : ''} focus:outline-2 focus:-outline-offset-2 ${hasErrors ? 'focus:outline-red-500' : 'focus:outline-blue-600'} rounded-md block w-full mt-3 border-none bg-slate-200 text-slate-900 dark:bg-gray-800 dark:text-gray-300 text-sm/6 py-1.5 px-3`;

interface TextareaProps extends Omit<TextFieldPropsAria, 'isInvalid' | 'children'> {
  fieldName: string;
  label: string;
  placeholder?: string;
  rows?: number;
  editor?: boolean;
  validations?: {
    required?: boolean;
  };
}

const Textarea: React.FC<TextareaProps> = ({
  fieldName,
  label,
  placeholder,
  rows,
  editor,
  validations,
  ...ariaProps
}) => {
  const { required } = validations || {};
  const { control, setValue, trigger } = useFormContext();
  const rules: RegisterOptions<FieldValues, string> | undefined = {};

  if (required) {
    rules.required = 'errors.validations.required';
  }

  const {
    field,
    fieldState: { error },
  } = useController({
    name: fieldName,
    control,
    rules,
  });

  return (
    <TextFieldAria isInvalid={!!error} {...ariaProps}>
      <FormLabel validations={validations}>{label}</FormLabel>
      <TextAreaAria
        rows={rows || 4}
        {...field}
        value={field.value || ''}
        className={`${editor ? 'sr-only ' : inputClassName(!!error)}`}
      />
      {editor && (
        <RichTextEditor
          aria-hidden="true"
          {...(placeholder ? { placeholder } : {})}
          hasErrors={!!error}
          initialContent={field.value || ''}
          onChange={(value: string) => {
            setValue(fieldName, value);
            trigger(fieldName);
          }}
        />
      )}
      <FormErrors error={error} />
    </TextFieldAria>
  );
};

export { Textarea };
