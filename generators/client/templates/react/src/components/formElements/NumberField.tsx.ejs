import { RegisterOptions, FieldValues } from 'react-hook-form';
import { useFormContext, useController } from 'react-hook-form';
import { FormLabelAria as FormLabel, FormErrorsAria as FormErrors, FormFieldInfo } from './index';
import {
  TextField as TextFieldAria,
  Input,
  TextFieldProps as TextFieldPropsAria,
} from 'react-aria-components';

interface TextFieldProps extends Omit<TextFieldPropsAria, 'isInvalid' | 'isRequired' | 'children'> {
  fieldName: string;
  label: string;
  placeholder?: string;
  validations?: {
    required?: boolean;
    min?: number;
    max?: number;
  };
}

const NumberField: React.FC<TextFieldProps> = ({ fieldName, label, validations, ...ariaProps }) => {
  const { required, min, max } = validations || {};
  const { control } = useFormContext();
  const rules: RegisterOptions<FieldValues, string> | undefined = {
    valueAsNumber: true,
  };

  if (required) {
    rules.required = 'errors.validations.required';
  }
  if (min !== undefined && min !== null) {
    rules.min = {
      value: min,
      message: `errors.validations.min:${min}`,
    };
  }
  if (max !== undefined && max !== null) {
    rules.max = {
      value: max,
      message: `errors.validations.max:${max}`,
    };
  }

  const {
    field,
    fieldState: { error },
  } = useController({
    name: fieldName,
    control,
    rules,
  });

  return (
    <TextFieldAria
      isInvalid={!!error}
      isRequired={validations?.required}
      {...ariaProps}
      type="number"
    >
      <FormLabel validations={validations}>{label}</FormLabel>
      <Input {...field} value={field.value ?? ''} className="form-field" />
      {!error && <FormFieldInfo validations={validations || {}} />}
      <FormErrors error={error} />
    </TextFieldAria>
  );
};

export { NumberField };
