import { useTranslation } from 'react-i18next';
import { useFormContext } from 'react-hook-form';
import { FormLabel } from './FormLabel';
import { FormErrors } from './FormErrors';
interface IRadioGroupOption {
  name: number | string | React.ReactNode;
  id: number | string;
}

interface RadioGroupProps {
  fieldName: string;
  label: string;
  loadingOptions?: boolean;
  multiple?: boolean;
  options: IRadioGroupOption[];
  validations?: {
    required?: boolean;
  };
}

const RadioGroup: React.FC<RadioGroupProps> = ({
  fieldName,
  label,
  loadingOptions,
  options,
  validations,
}) => {
  const { t } = useTranslation();
  const { required } = validations || {};
  const {
    register,
    formState: { errors },
  } = useFormContext();

  return (
    <>
      <FormLabel htmlFor={fieldName} label={label} validations={validations} />
      <div className={errors?.[fieldName]?.message ? 'form-field-error' : 'form-field'}>
        {loadingOptions ? (
          <div>{t('common.select.loading')}</div>
        ) : options.length === 0 ? (
          <label className="flex gap-2 items-center">
            <input
              type="radio"
              value={undefined}
              disabled
              {...register(fieldName, {
                required: required ? 'errors.validations.required' : false,
              })}
            />
            {t('common.select.noOptions')}
          </label>
        ) : (
          <>
            {options.map((op) => (
              <label className="flex gap-2 items-center" key={op.id}>
                <input
                  type="radio"
                  value={op.id}
                  {...register(fieldName, {
                    required: required ? 'errors.validations.required' : false,
                  })}
                />
                {op.name}
              </label>
            ))}
            {!required && (
              <label className="flex gap-2 items-center">
                <input
                  value={undefined}
                  type="radio"
                  {...register(fieldName, {
                    required: required ? 'errors.validations.required' : false,
                  })}
                />
                {t('common.select.noValue')}
              </label>
            )}
          </>
        )}
      </div>
      <FormErrors errors={errors} fieldName={fieldName} />
    </>
  );
};

export { RadioGroup };
export type { IRadioGroupOption };
