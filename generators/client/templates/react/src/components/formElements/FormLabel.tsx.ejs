import { IconAsterisk } from '@tabler/icons-react';
import { IInfoValidations } from './InfoValidations';
import { Label } from 'react-aria-components';

interface FormLabelProps {
  children?: React.ReactNode;
  validations?: IInfoValidations;
  id?: string;
}

const FormLabel: React.FC<FormLabelProps> = ({ children, validations, id, ...ariaProps }) => {
  return (
    <Label className="block text-sm font-medium mb-1" id={id ?? undefined} {...ariaProps}>
      {children}
      {validations?.required && (
        <IconAsterisk aria-hidden="true" className="inline align-top size-3" />
      )}
    </Label>
  );
};

export { FormLabel };
