import { RegisterOptions, FieldValues } from 'react-hook-form';
import { useFormContext, useController } from 'react-hook-form';
import { SquareIcon, SquareCheckBigIcon } from 'lucide-react';
import { FormLabelAria as FormLabel, FormErrorsAria as FormErrors } from './index';
import {
  Checkbox as CheckboxAria,
  CheckboxGroup as CheckboxGroupAria,
  CheckboxProps as CheckboxPropsAria,
} from 'react-aria-components';

interface CheckboxProps
  extends Omit<CheckboxPropsAria, 'isInvalid' | 'isSelected' | 'isRerquired' | 'children'> {
  fieldName: string;
  label: string;
  validations?: {
    required?: boolean;
  };
}

const Checkbox: React.FC<CheckboxProps> = ({ fieldName, label, validations, ...ariaProps }) => {
  const { required } = validations || {};
  const { control, setValue } = useFormContext();
  const rules: RegisterOptions<FieldValues, string> | undefined = {};

  if (required) {
    rules.required = 'errors.validations.required';
  }
  const {
    field,
    fieldState: { error },
  } = useController({
    name: fieldName,
    control,
    rules,
  });

  const className =
    'mx-auto mt-3 h-7 w-7 rounded-md group-data-focused:outline-2 group-data-focused:outline-offset-2 group-data-focused:outline-blue-600 group-data-focused:dark:outline-blue-300 group-data-disabled:opacity-50 text-slate-900 dark:text-slate-100 group-data-invalid:text-red-600 group-data-invalid:dark:text-red-500';

  return (
    <CheckboxGroupAria
      isInvalid={!!error}
      isRequired={required}
      className="bg-slate-50 dark:bg-slate-900"
    >
      <FormLabel validations={validations}>{label}</FormLabel>
      <CheckboxAria
        {...ariaProps}
        {...field}
        isRequired={required}
        isSelected={field.value}
        onChange={() =>
          setValue(fieldName, !field.value, { shouldValidate: true, shouldDirty: true })
        }
        className="group"
      >
        {field.value ? (
          <SquareCheckBigIcon className={className} aria-hidden="true" />
        ) : (
          <SquareIcon className={className} aria-hidden="true" />
        )}
      </CheckboxAria>
      <FormErrors error={error} />
    </CheckboxGroupAria>
  );
};

export { Checkbox };
