import { useFormContext, RegisterOptions, FieldValues } from 'react-hook-form';
import { FormLabel } from './FormLabel';
import { FormErrors } from './FormErrors';

const inputClassName = (hasErrors = false) =>
  `h-10 w-20 scheme-light dark:scheme-dark outline-0${hasErrors ? ' outline-2 -outline-offset-2 outline-red-500' : ''} focus:outline-2 focus:-outline-offset-2 ${hasErrors ? 'focus:outline-red-500' : 'focus:outline-blue-600'} rounded-md block mt-3 border-none bg-slate-200 text-slate-900 dark:bg-gray-800 dark:text-gray-300 text-sm/6 py-1.5 px-3`;

interface ColorFieldProps {
  fieldName: string;
  label: string;
  placeholder?: string;
  validations?: {
    required?: boolean;
  };
}

const ColorField: React.FC<ColorFieldProps> = ({ fieldName, label, placeholder, validations }) => {
  const { required } = validations || {};
  const {
    register,
    formState: { errors },
  } = useFormContext();

  const opts: RegisterOptions<FieldValues, string> | undefined = {};

  if (required) {
    opts.required = 'errors.validations.required';
  }

  return (
    <>
      <FormLabel htmlFor={fieldName} label={label} validations={validations} />
      <input
        type="color"
        {...(placeholder ? { placeholder } : {})}
        id={fieldName}
        {...register(fieldName, opts)}
        className={inputClassName(!!errors?.[fieldName]?.message)}
      />
      <FormErrors errors={errors} fieldName={fieldName} />
    </>
  );
};

export { ColorField };
