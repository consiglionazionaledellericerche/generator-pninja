import { useState } from 'react';
import { useTranslation } from 'react-i18next';
import { useNavigate } from 'react-router-dom';
import { useAuthorization } from '../contexts/AuthorizationContext';
import { Icon } from './Icon';

const LogoutButton: React.FC = () => {
  const [loading, setLoading] = useState(false);
  const navigate = useNavigate();
  const { t } = useTranslation();
  const { refresh } = useAuthorization();
  const handleLogout = async () => {
    setLoading(true);
    refresh();
    navigate('/logout', { state: { from: location.pathname } });
  };

  return (
    <button
      onClick={handleLogout}
      title={t('ui.account.logout')}
      aria-label={t('ui.account.logout')}
      disabled={loading}
      className={`inline-flex items-center gap-1 nav-bar-link p-2! rounded-full ${loading ? 'cursor-not-allowed' : 'cursor-pointer'}`}
    >
      {loading ? (
        <div className="animate-spin rounded-full size-5 border-b-2"></div>
      ) : (
        <Icon icon="logout" size={5} />
      )}
    </button>
  );
};

export default LogoutButton;
