import React, { useEffect } from 'react';
import { Outlet } from 'react-router-dom';
import { useAuthState } from '../contexts/AuthContext';
import { SimpleLoader } from './SimpleLoader';

const ProtectedRoute: React.FC = () => {
  const { isAuthenticated, loading, login } = useAuthState();

  // Avvia il flusso di autenticazione se l'utente non è autenticato
  useEffect(() => {
    if (!loading && !isAuthenticated) {
      // Avvia il processo di login, che reindirizza a Keycloak
      login();
    }
  }, [loading, isAuthenticated, login]);

  // Mostra il loader durante il caricamento o durante il reindirizzamento
  if (loading || !isAuthenticated) {
    return <SimpleLoader />;
  }

  // Renderizza il contenuto protetto se l'utente è autenticato
  return <Outlet />;
};

export default ProtectedRoute;
