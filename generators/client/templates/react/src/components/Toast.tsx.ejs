import { X } from 'lucide-react';
import { INotification, useNotifications } from '../contexts/NotificationContext';
import { useEffect, useState, useCallback, useMemo } from 'react';
import { useTranslation } from 'react-i18next';

export function Toast({ notification }: { notification: INotification }) {
  const { t } = useTranslation();
  const {
    removeNotification,
    pauseNotification,
    resumeNotification,
    getRemainingTime,
    hasAutoClose,
  } = useNotifications();

  const duration = notification.duration || 5000;
  const [remainingTime, setRemainingTime] = useState(duration);
  const [isPaused, setIsPaused] = useState(false);
  const [showTechDetails, setShowTechDetails] = useState(false);
  const hasTimer = hasAutoClose(notification.id);

  const colors = useMemo(
    () =>
      ({
        success: {
          main: 'bg-green-700 text-white',
          details: 'bg-green-800 text-white',
          progress: 'bg-green-500',
        },
        error: {
          main: 'bg-red-600 text-white',
          details: 'bg-red-700 text-white',
          progress: 'bg-red-400',
        },
        warning: {
          main: 'bg-yellow-500 text-yellow-900',
          details: 'bg-yellow-600 text-yellow-950',
          progress: 'bg-yellow-300',
        },
        info: {
          main: 'bg-blue-600 text-white',
          details: 'bg-blue-700 text-white',
          progress: 'bg-blue-400',
        },
      })[notification.type],
    [notification.type]
  );

  useEffect(() => {
    if (!hasTimer || isPaused) return;

    const timer = setInterval(() => {
      const remaining = getRemainingTime(notification.id);
      setRemainingTime(remaining);
    }, 100);

    return () => clearInterval(timer);
  }, [isPaused, notification.id, getRemainingTime, hasTimer]);

  const handleMouseEnter = useCallback(() => {
    if (!hasTimer) return;
    setIsPaused(true);
    pauseNotification(notification.id);
  }, [notification.id, pauseNotification, hasTimer]);

  const handleMouseLeave = useCallback(() => {
    if (!hasTimer) return;
    setIsPaused(false);
    resumeNotification(notification.id);
  }, [notification.id, resumeNotification, hasTimer]);

  const progressStyle = useMemo(
    () => ({
      width: hasTimer ? `${(remainingTime / duration) * 100}%` : '100%',
      transition: isPaused ? 'none' : 'width linear 100ms',
    }),
    [remainingTime, duration, isPaused, hasTimer]
  );

  return (
    <div
      className={`${colors.main} rounded-lg shadow-lg dark:shadow-lg/70 min-w-[300px] max-w-[50vw] overflow-hidden`}
      onMouseEnter={handleMouseEnter}
      onMouseLeave={handleMouseLeave}
    >
      <div className="p-4 flex justify-between items-start">
        <div className="flex-1">
          <div className="flex items-center gap-2">
            <div>{notification.message}</div>
          </div>
          {notification.details && (
            <div className={`${colors.details} mt-2 text-sm p-2 rounded`}>
              <div>
                {notification.details}
                {notification.techDetails && !showTechDetails && (
                  <span className="text-xs">
                    {' '}
                    (
                    <a
                      href="#"
                      onClick={() => setShowTechDetails(!showTechDetails)}
                      className="hover:underline"
                    >
                      {t('common.show.more')} ...
                    </a>
                    )
                  </span>
                )}
              </div>
              {showTechDetails && notification.techDetails && (
                <>
                  <pre className="mt-2 text-xs text-wrap">{notification.techDetails}</pre>
                  {notification.techDetails && showTechDetails && (
                    <span className="text-xs">
                      {' '}
                      (
                      <a
                        href="#"
                        onClick={() => setShowTechDetails(!showTechDetails)}
                        className="hover:underline"
                      >
                        {t('common.show.less')}
                      </a>
                      )
                    </span>
                  )}
                </>
              )}
            </div>
          )}
        </div>
        <div className="flex items-center ms-2 gap-2 shrink-0">
          &nbsp;
          {hasTimer && (
            <span className="text-sm opacity-75">({Math.ceil(remainingTime / 1000)}s)</span>
          )}
          <button
            onClick={() => removeNotification(notification.id)}
            className="cursor-pointer rounded-full"
          >
            <X size={18} />
          </button>
        </div>
      </div>
      <div className="h-1 w-full">
        <div className={`h-full ${colors.progress}`} style={progressStyle} />
      </div>
    </div>
  );
}
