import { useTranslation } from 'react-i18next';
import { Input } from '@headlessui/react'
<%# form-template.ejs %>
<%
// Helper function to get input type based on property type
function getInputType(type) {
    if (type.includes('number')) return 'number';
    if (type.includes('date')) return 'date';
    if (type.includes('email')) return 'email';
    if (type.includes('boolean')) return 'checkbox';
    return 'text';
}

// Helper function to convert camelCase or snake_case to Title Case
function toTitleCase(str) {
    return str
        .split(/[_\s]/)
        .map(word => word.charAt(0).toUpperCase() + word.slice(1))
        .join(' ');
}

// Helper function to check if a property is a relation
function isRelation(type) {
    return type.startsWith('I') && type !== 'ID';
}

// Helper function to check if a property is an array
function isArray(type) {
    return type.includes('[]');
}

// Helper to get base type from array type
function getBaseType(type) {
    return type.replace('[]', '').replace('| null', '').trim();
}

// Exclude these fields from the form
const excludedFields = ['id', 'created_at', 'updated_at'];
%>

export function <%= entity.name %>Form() {
  const { t } = useTranslation();
  const inputClassName = 'mt-3 block w-full rounded-lg border-none bg-slate-200 text-slate-900 dark:bg-gray-800 dark:text-gray-300 py-1.5 px-3 text-sm/6 focus:outline-none data-[focus]:outline-2 data-[focus]:-outline-offset-2 data-[focus]:dark:outline-white/25';
  return (
  <form className="mt-6 space-y-6 max-w-2xl mx-auto p-4">
    <% for (const [key, type] of Object.entries(interface.properties)) {
        if (excludedFields.includes(key)) continue;
        
        const fieldName = key;
        const fieldType = type.replace('?', '').replace('| null', '').trim();
        const isRequired = !type.includes('?') && !type.includes('null');
    %>

        <% if (isRelation(fieldType)) { %>
            <div className="form-group">
                <label htmlFor="<%= fieldName %>" className="block text-sm font-medium">
                    {t(`entities.<%-to.snake(entity.name)%>.<%= fieldName %>`)}
                </label>
                <% if (isArray(fieldType)) { %>
                    <select 
                        id="<%= fieldName %>" 
                        name="<%= fieldName %>" 
                        multiple 
                        className={inputClassName}
                    >
                        <option value="">Select {t(`entities.<%-to.snake(entity.name)%>.<%= fieldName %>`)}...</option>
                    </select>
                <% } else { %>
                    <select 
                        id="<%= fieldName %>" 
                        name="<%= fieldName %>" 
                        className={inputClassName}
                        <%= isRequired ? 'required' : '' %>
                    >
                        <option value="">Select {t(`entities.<%-to.snake(entity.name)%>.<%= fieldName %>`)}...</option>
                    </select>
                <% } %>
            </div>
        <% } else { %>
            <div className="form-group">
                <label htmlFor="<%= fieldName %>" className="block text-sm font-medium">
                    {t(`entities.<%-to.snake(entity.name)%>.<%= fieldName %>`)}
                </label>
                <% if (fieldType.includes('string') && fieldName.includes('description')) { %>
                    <textarea 
                        id="<%= fieldName %>" 
                        name="<%= fieldName %>" 
                        rows="3" 
                        className={inputClassName}
                        <%= isRequired ? 'required' : '' %>
                    ></textarea>
                <% } else { %>
                    <Input 
                        type="<%= getInputType(fieldType) %>" 
                        id="<%= fieldName %>" 
                        name="<%= fieldName %>" 
                        className={inputClassName}
                        <%= isRequired ? 'required' : '' %>
                        <% if (fieldType.includes('number')) { %>
                            step="any"
                        <% } %>
                    />
                <% } %>
            </div>
        <% } %>
    <% } %>

    <div className="flex justify-end gap-4">
        <button 
            type="button" 
            className="rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
        >
            Cancel
        </button>
        <button 
            type="submit" 
            className="rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
        >
            Save
        </button>
    </div>
</form>);
}