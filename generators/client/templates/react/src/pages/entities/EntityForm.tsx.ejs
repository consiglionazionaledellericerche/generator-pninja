<%
const isNullable = (validations) => !validations.reduce((required, validation) => required || validation.key === 'required', false);

const isEmail = (name) => name.toLowerCase().includes('email');

const fieldTypeToSchema = (type) => {
    const typeMap = {
        'String': 'string',
        'Integer': 'number',
        'Long': 'number',
        'BigDecimal': 'number',
        'Float': 'number',
        'Double': 'number',
        'Boolean': 'boolean',
        'LocalDate': 'string',
        'ZonedDateTime': 'string',
        'Instant': 'string',
        'TextBlob': 'string',
        'Blob': 'string',
        'ImageBlob': 'string'
    };

    return typeMap[type] || 'string';
}

const fieldTypeInputType = (type) => {
    const typeMap = {
        'String': 'text',
        'Integer': 'number',
        'Long': 'number',
        'BigDecimal': 'number',
        'Float': 'number',
        'Double': 'number',
        'Boolean': 'boolean',
        'LocalDate': 'date',
        'ZonedDateTime': 'datetime-local',
        'Instant': 'datetime-local',
        'TextBlob': 'string',
        'Blob': 'string',
        'ImageBlob': 'string'
    };

    return typeMap[type] || 'string';
}
-%>
import { useEffect, useState } from 'react';
import { useForm } from 'react-hook-form';
import { zodResolver } from '@hookform/resolvers/zod';
import { useTranslation } from 'react-i18next';
import * as z from 'zod';
import { I<%= entity.name %>, defaultValue } from '../../shared/model/<%= to.slug(entity.name)%>.model';
<%for(related of [...new Set(relatedEntities.map(({related}) => related))]) {-%>
<%  if (related !== entity.name) {-%>
import { I<%= related %> } from '../../shared/model/<%= to.slug(related)%>.model';
<%  }-%>
<%}-%>
import { useAuthenticatedFetch } from '../../hooks/useAuthenticatedFetch';
import { useNotifications } from '../../contexts/NotificationContext';

const <%= to.camel(entity.name)%>Schema = z.object({
<% for({name, type, validations} of entity.body) {-%>
  <%= to.snake(name) %>: z.<%= fieldTypeToSchema(type) %>()<%- isEmail(name) ? `.email('errors.validation.mail_format')` : '' %><%= isNullable(validations) ? '.nullable()' : '.nonempty()' %>,
<% } -%>
<% for({field, related, isArray} of relatedEntities) {-%>
  <%= to.snake(field) %>: <%= isArray ? `z.array(z.string()).nullable()` : `z.number().nullable()`%>,
<% }-%>
});

type <%= entity.name %>FormData = z.infer<typeof <%= to.camel(entity.name)%>Schema>;

interface <%= entity.name %>FormProps {
  <%= to.camel(entity.name)%>?: I<%= entity.name %>;
  onSubmit: (data: <%= entity.name %>FormData) => void;
  onCancel: () => void;
}

interface SelectOption {
  id: number;
  label: string;
}

export function <%= entity.name %>Form({ <%= to.camel(entity.name)%>, onSubmit, onCancel }: <%= entity.name%>FormProps) {
  const { t } = useTranslation();
  const { addNotification } = useNotifications();
  const authenticatedFetch = useAuthenticatedFetch();

<% for(related of [...new Set(relatedEntities.map(({related}) => related))]) {-%>
  const [<%= to.camel(pluralize(related)) %>DataOptions, <%= to.camel(`set_${pluralize(related)}_data_options`) %>] = useState<SelectOption[]>([]);
<% }-%>
  const [loadingOptions, setLoadingOptions] = useState(true);

  const {
    register,
    handleSubmit,
    formState: { errors, isSubmitting },
    reset,
  } = useForm<<%= entity.name %>FormData>({
    resolver: zodResolver(<%= to.camel(entity.name)%>Schema),
    defaultValues: {
      ...defaultValue,
<% for({field, related, isArray} of relatedEntities) {-%>
      <%= to.snake(field) %>: <%= to.camel(entity.name)%>?.<%= to.snake(field) %>?.<%- isArray ? 'map(item => String(item.id))' : 'id' %>,
<% }-%>
    },
  });

  const handleFormSubmit = async (data: <%= entity.name %>FormData) => {
    try {
      await onSubmit(data);
      reset(); // Reset form after successful submission
    } catch (error) {
      console.error('Form submission error:', error);
    }
  };

  useEffect(() => {
    const fetchOptions = async () => {
      setLoadingOptions(true);
      try {
<% for(related of [...new Set(relatedEntities.map(({related}) => related))]) {-%>
        const <%= to.camel(pluralize(related)) %>Response = await authenticatedFetch('/api/<%=to.slug(pluralize(related))%>');
        const <%= to.camel(pluralize(related)) %>Data = await <%= to.camel(pluralize(related)) %>Response.json();
        <%= to.camel(`set_${pluralize(related)}_data_options`) %>((<%= to.camel(pluralize(related)) %>Data.map((item: I<%-related%>) => ({
          id: item.id,
          label: `ID: ${item.id}`
        }))).sort((a: SelectOption, b: SelectOption) => a.label.localeCompare(b.label, undefined, { numeric: true })));
<% }-%>
      } catch (error) {
        console.error('Error fetching options:', error);
        addNotification({
          type: 'error',
          message: t('errors.options.load'),
          details: error instanceof Error ? error.message : undefined
        });
      } finally {
        setLoadingOptions(false);
      }
    };

    fetchOptions();
  }, [authenticatedFetch, addNotification, t]);

  useEffect(() => {
    if (<%= to.camel(entity.name)-%>) {
      reset({
<% for({name, type, validations} of entity.body) {-%>
        <%= to.snake(name) %>: <%= to.camel(entity.name)%>?.<%= to.snake(name) %>,
<% } -%>
<% for({field, related, isArray} of relatedEntities) {-%>
        <%= to.snake(field) %>: <%= to.camel(entity.name)%>?.<%= to.snake(field) %>?.<%- isArray ? 'map(item => String(item.id))' : 'id' %>,
<% }-%>
    });
    }
  }, [<%= to.camel(entity.name)%>, reset, loadingOptions]);

  const inputClassName =
    'mt-3 block w-full rounded-lg border-none bg-slate-200 text-slate-900 dark:bg-gray-800 dark:text-gray-300 py-1.5 px-3 text-sm/6 focus:outline-none data-[focus]:outline-2 data-[focus]:-outline-offset-2 data-[focus]:dark:outline-white/25 scheme-light dark:scheme-dark';

  return (
    <form onSubmit={handleSubmit(handleFormSubmit)} className="space-y-6">
      <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
<%    for({name, type, validations} of entity.body) {-%>
        <div>
          <label htmlFor="<%= to.snake(name) %>" className="block text-sm font-medium">
            {t('entities.<%-to.snake(entity.name)%>.<%-to.snake(name)%>')}
          </label>
          <input
            type="<%= fieldTypeInputType(type)%>"
<%          if (fieldTypeInputType(type) === 'datetime-local') {-%>
            step="1"
<%          }-%>
            id="<%= to.snake(name) %>"
            {...register('<%= to.snake(name) %>'<% if(fieldTypeInputType(type) === 'number') {%>, { valueAsNumber: true }<%}%>)}
            className={inputClassName}
          />
          {errors?.<%= to.snake(name) %>?.message && (
            <p className="mt-1 text-sm text-red-600">{t(errors.<%= to.snake(name) %>.message)}</p>
          )}
        </div>
<%    }-%>
<%    for({field, related, isArray} of relatedEntities) {-%>
        <div>
          <label htmlFor="<%= to.snake(field) %>" className="block text-sm font-medium">
            {t('entities.<%-to.snake(entity.name)%>.<%-to.snake(field)%>')}
          </label>
          <select
<%          if (isArray) {-%>
            multiple
            size={Math.min(10, <%= to.camel(pluralize(related)) %>DataOptions.length)}
<%          }-%>
            id="<%= to.snake(field) %>"
            {...register('<%= to.snake(field) %>'<% if(!isArray) {%>, { valueAsNumber: true }<%}%>)}
            className={inputClassName}>
<%          if (!isArray) {-%>
            <option value="">{t('common.select.placeholder')}</option>
<%          }-%>
            {loadingOptions ? (
              <option>{t('common.loading')}</option>
            ) : (
              <%= to.camel(pluralize(related)) %>DataOptions.map(op => <option value={op.id}>{op.label}</option>)
            )}
          </select>
        </div>
<%    }-%>
      </div>
      <div className="flex justify-end gap-4">
        <button
          type="button"
          onClick={onCancel}
          className="rounded-md border border-gray-300 bg-white dark:bg-transparent py-2 px-4 text-sm font-medium shadow-sm hover:bg-gray-50 hover:dark:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
        >
          Cancel
        </button>
        <button
          type="submit"
          disabled={isSubmitting}
          className="rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 disabled:opacity-50"
        >
          {isSubmitting ? 'Saving...' : 'Save'}
        </button>
      </div>
    </form>
  )
}