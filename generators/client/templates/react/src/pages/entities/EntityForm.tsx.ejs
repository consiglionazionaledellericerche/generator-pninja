<%
const isNullable = (validations) => !validations.reduce((required, validation) => required || validation.key === 'required', false);

const isEmail = (name) => name.toLowerCase().includes('email');

const fieldTypeToSchema = (type) => {
    const typeMap = {
        'String': 'string',
        'Integer': 'number',
        'Long': 'number',
        'BigDecimal': 'number',
        'Float': 'number',
        'Double': 'number',
        'Boolean': 'boolean',
        'LocalDate': 'string',
        'ZonedDateTime': 'string',
        'Instant': 'string',
        'TextBlob': 'string',
        'Blob': 'string',
        'ImageBlob': 'string'
    };

    return typeMap[type] || 'string';
}

const fieldTypeInputType = (type) => {
    const typeMap = {
        'String': 'text',
        'Integer': 'number',
        'Long': 'number',
        'BigDecimal': 'number',
        'Float': 'number',
        'Double': 'number',
        'Boolean': 'boolean',
        'LocalDate': 'date',
        'ZonedDateTime': 'datetime-local',
        'Instant': 'datetime-local',
        'TextBlob': 'string',
        'Blob': 'string',
        'ImageBlob': 'string'
    };

    return typeMap[type] || 'string';
}
-%>
import { useEffect, useState } from 'react';
import { useForm } from 'react-hook-form';
import { zodResolver } from '@hookform/resolvers/zod';
import { useTranslation } from 'react-i18next';
import * as z from 'zod';
import { I<%= entity.name %>, defaultValue } from '../../shared/model/<%= to.slug(entity.name)%>.model';
<%for(related of [...new Set(relatedEntities.map(({related}) => related)), ...new Set(foreignIds.map(({related}) => related))]) {-%>
<%  if (related !== entity.name) {-%>
import { I<%= related %> } from '../../shared/model/<%= to.slug(related)%>.model';
<%  }-%>
<%}-%>
import { useAuthenticatedFetch } from '../../hooks/useAuthenticatedFetch';
import { useNotifications } from '../../contexts/NotificationContext';
import { ChevronDown } from 'lucide-react';

const <%= to.camel(entity.name)%>Schema = z.object({
<% for({name, type, validations} of entity.body) {-%>
  <%= to.snake(name) %>: z.<%= fieldTypeToSchema(type) %>()<%- isEmail(name) ? `.email()` : '' %><%= isNullable(validations) ? '.nullable()' : (fieldTypeToSchema(type) === 'number' ? '.min(1)' : '.nonempty()') %>,
<% } -%>
<% for({field, related, isArray} of relatedEntities) {-%>
  <%= to.snake(field) %>: <%= isArray ? `z.array(z.string()).nullable()` : `z.number().min(1)`%>,
<% }-%>
<% for({foreignId, related} of foreignIds) {-%>
  <%= to.snake(foreignId) %>: z.number().nullable(),
<% }-%>
});

type <%= entity.name %>FormData = z.infer<typeof <%= to.camel(entity.name)%>Schema>;

interface <%= entity.name %>FormProps {
  <%= to.camel(entity.name)%>?: I<%= entity.name %>;
  onSubmit: (data: <%= entity.name %>FormData) => void;
  onCancel: () => void;
}

interface SelectOption {
  id: number;
  label: string;
}

export function <%= entity.name %>Form({ <%= to.camel(entity.name)%>, onSubmit, onCancel }: <%= entity.name%>FormProps) {
  const { t } = useTranslation();
  const { addNotification } = useNotifications();
  const authenticatedFetch = useAuthenticatedFetch();
<% for({field} of relatedEntities) {-%>
  const [<%= to.camel((field)) %>DataOptions, <%= to.camel(`set_${(field)}_data_options`) %>] = useState<SelectOption[]>([]);
<% }-%>
<% for({foreignId} of foreignIds) {-%>
  const [<%= to.camel((foreignId)) %>DataOptions, <%= to.camel(`set_${(foreignId)}_data_options`) %>] = useState<SelectOption[]>([]);
<% }-%>
  const [loadingOptions, setLoadingOptions] = useState(true);

  const {
    register,
    handleSubmit,
    formState: { errors, isSubmitting },
    reset,
  } = useForm<<%= entity.name %>FormData>({
    resolver: zodResolver(<%= to.camel(entity.name)%>Schema),
    defaultValues: {
      ...defaultValue,
<% for({field, related, isArray} of relatedEntities) {-%>
      <%= to.snake(field) %>: <%= to.camel(entity.name)%>?.<%= to.snake(field) %>?.<%- isArray ? 'map(item => String(item.id))' : 'id' %>,
<% }-%>
<% for({foreignId, related} of foreignIds) {-%>
      <%= to.snake(foreignId) %>: <%= to.camel(entity.name)%>?.<%= to.snake(foreignId) %>,
<% }-%>
    },
  });

  const handleFormSubmit = async (data: <%= entity.name %>FormData) => {
    try {
      await onSubmit(data);
      reset(); // Reset form after successful submission
    } catch (error) {
      console.error('Form submission error:', error);
    }
  };

  useEffect(() => {
    const fetchOptions = async () => {
      setLoadingOptions(true);
<% for({field, related, relatedField, labelField} of relatedEntities) {-%>
      try {
        const <%= to.camel(field) %>Response = await authenticatedFetch('/api/<%=to.slug(pluralize(related))%><% if (relatedEntitiesForFilters.includes(field)) {%>?filter=<%- to.slug(relatedField)%>-is-null<%}%>');
        const <%= to.camel(field) %>Data = await <%= to.camel(field) %>Response.json();
<%      if (relatedEntitiesForFilters.includes(field)) {%>
        if (<%- to.camel(entity.name)%>?.<%= to.snake(field) %>) <%= to.camel(field) %>Data.push(<%- to.camel(entity.name)%>.<%= to.snake(field) %>);
<%      }%>
        <%= to.camel(`set_${field}_data_options`) %>((<%= to.camel(field) %>Data.map((item: I<%-related%>) => ({
          id: item.id,
<%        if (labelField === 'id') {-%>
          label: `${item.id}`
<%        } else {-%>
          label: `${item.<%-to.snake(labelField)%> || ''} (ID: ${item.id})`
<%        }-%>
        }))).sort((a: SelectOption, b: SelectOption) => a.label.localeCompare(b.label, undefined, { numeric: true })));
      } catch (error) {
        console.error('Error fetching options:', error);
        addNotification({
          type: 'error',
          message: `${t('errors.options.load')} ${t('entities.<%-to.snake(entity.name)%>.<%-to.snake(field)%>')}`,
          details: error instanceof Error ? error.message : undefined,
          duration: 0,
        });
      }
<% }-%>
<% for({foreignId, related, labelField} of foreignIds) {-%>
      try {
        const <%= to.camel(foreignId) %>Response = await authenticatedFetch('/api/<%=to.slug(pluralize(related))%>');
        const <%= to.camel(foreignId) %>Data = await <%= to.camel(foreignId) %>Response.json();
        <%= to.camel(`set_${foreignId}_data_options`) %>((<%= to.camel(foreignId) %>Data.map((item: I<%-related%>) => ({
          id: item.id,
<%        if (labelField === 'id') {%>
          label: `${item.id}`
<%        } else {-%>
          label: `${item.<%-to.snake(labelField)%> || ''} (ID: ${item.id})`
<%        }-%>
        }))).sort((a: SelectOption, b: SelectOption) => a.label.localeCompare(b.label, undefined, { numeric: true })));
      } catch (error) {
        console.error('Error fetching options:', error);
        addNotification({
          type: 'error',
          message: `${t('errors.options.load')} ${t('entities.<%-to.snake(entity.name)%>.<%-to.snake(foreignId)%>')}`,
          details: error instanceof Error ? error.message : undefined,
          duration: 0,
        });
      }
<% }-%>
      setLoadingOptions(false);
    };

    fetchOptions();
  }, [authenticatedFetch, addNotification, t]);

  useEffect(() => {
    if (<%= to.camel(entity.name)-%>) {
      reset({
<% for({name, type, validations} of entity.body) {-%>
        <%= to.snake(name) %>: <%= to.camel(entity.name)%>?.<%= to.snake(name) %>,
<% } -%>
<% for({field, related, isArray} of relatedEntities) {-%>
        <%= to.snake(field) %>: <%= to.camel(entity.name)%>?.<%= to.snake(field) %>?.<%- isArray ? 'map(item => String(item.id))' : 'id' %>,
<% }-%>
<% for({foreignId, related} of foreignIds) {-%>
        <%= to.snake(foreignId) %>: <%= to.camel(entity.name)%>?.<%= to.snake(foreignId) %>,
<% }-%>
    });
    }
  }, [<%= to.camel(entity.name)%>, reset, loadingOptions]);

  const inputClassName = 'scheme-light dark:scheme-dark outline-0 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-600 rounded-lg block w-full mt-3 border-none bg-slate-200 text-slate-900 dark:bg-gray-800 dark:text-gray-300 text-sm/6 py-1.5 px-3';
  const selectClassName = 'scheme-light dark:scheme-dark outline-0 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-600 rounded-lg block w-full mt-3 border-none bg-slate-200 text-slate-900 dark:bg-gray-800 dark:text-gray-300 text-sm/6 py-1.5 pr-8 pl-3 text-base appearance-none col-start-1 row-start-1';
  const selectChevronClassName = 'pointer-events-none col-start-1 row-start-1 mt-3 mr-2 size-5 self-center justify-self-end text-gray-500 sm:size-4';
  const selectContainerClassName = 'grid grid-cols-1';
  return (
    <form onSubmit={handleSubmit(handleFormSubmit)}>
      <div className="max-w-5xl mx-auto space-y-4">
<%    for({name, type, validations} of entity.body) {-%>
        <div>
          <label htmlFor="<%= to.snake(name) %>" className="block text-sm font-medium">
            {t('entities.<%-to.snake(entity.name)%>.<%-to.snake(name)%>')}
          </label>
          <input
            type="<%= fieldTypeInputType(type)%>"
<%          if (fieldTypeInputType(type) === 'datetime-local') {-%>
            step="1"
<%          }-%>
            id="<%= to.snake(name) %>"
            {...register('<%= to.snake(name) %>'<% if(fieldTypeInputType(type) === 'number') {%>, { valueAsNumber: true }<%}%>)}
            className={inputClassName}
          />
          {errors?.<%= to.snake(name) %>?.message && (
            <p className="mt-1 text-sm text-red-600">{errors.<%= to.snake(name) %>.message}</p>
          )}
        </div>
<%    }-%>
<%    for({field, related, isArray} of relatedEntities) {-%>
        <div>
          <label htmlFor="<%= to.snake(field) %>" className="block text-sm font-medium">
            {t('entities.<%-to.snake(entity.name)%>.<%-to.snake(field)%>')}
          </label>
          <div className={selectContainerClassName}>
            <select
<%            if (isArray) {-%>
              multiple
              size={Math.min(10, <%= to.camel(field) %>DataOptions.length)}
<%            }-%>
              id="<%= to.snake(field) %>"
              {...register('<%= to.snake(field) %>'<% if(!isArray) {%>, { valueAsNumber: true }<%}%>)}
              className={selectClassName}>
<%            if (!isArray) {-%>
              {!loadingOptions && <%= to.camel(field) %>DataOptions.length > 0 && <option value="">{t('common.select.placeholder')}</option>}
<%            }-%>
              {loadingOptions ? (
                <option>{t('common.select.loading')}</option>
              ) : (
                <%= to.camel(field) %>DataOptions.length === 0
                ? <option>{t('common.select.noOptions')}</option>
                : <%= to.camel(field) %>DataOptions.map(op => <option key={op.id} value={op.id}>{op.label}</option>)
              )}
            </select>
<%            if (!isArray) {-%>
            <ChevronDown aria-hidden="true" className={selectChevronClassName} />
<%            }-%>
          </div>
          {errors?.<%= to.snake(field) %>?.message && (
            <p className="mt-1 text-sm text-red-600">{errors.<%= to.snake(field) %>.message}</p>
          )}
        </div>
<%    }-%>
<%    for({foreignId, related, isArray} of foreignIds) {-%>
        <div>
          <label htmlFor="<%= to.snake(foreignId) %>" className="block text-sm font-medium">
            {t('entities.<%-to.snake(entity.name)%>.<%-to.snake(foreignId)%>')}
          </label>
          <div className={selectContainerClassName}>
            <select
              id="<%= to.snake(foreignId) %>"
              {...register('<%= to.snake(foreignId) %>', { valueAsNumber: true })}
              className={selectClassName}>
              {!loadingOptions && <%= to.camel(foreignId) %>DataOptions.length > 0 && <option value="">{t('common.select.placeholder')}</option>}
              {loadingOptions ? (
                <option>{t('common.select.loading')}</option>
              ) : (
                <%= to.camel(foreignId) %>DataOptions.length === 0
                ? <option>{t('common.select.noOptions')}</option>
                : <%= to.camel(foreignId) %>DataOptions.map(op => <option key={op.id} value={op.id}>{op.label}</option>)
              )}
            </select>
<%            if (!isArray) {-%>
            <ChevronDown aria-hidden="true" className={selectChevronClassName} />
<%            }-%>
          </div>
          {errors?.<%= to.snake(foreignId) %>?.message && (
            <p className="mt-1 text-sm text-red-600">{errors.<%= to.snake(foreignId) %>.message}</p>
          )}
        </div>
<%    }-%>
      </div>
      <div className="flex justify-center gap-4 mt-4">
        <button
          type="button"
          onClick={onCancel}
          className="
          cursor-pointer
          rounded-md
          border
          border-gray-300
          bg-white
          dark:bg-transparent
          py-2
          px-4
          text-sm
          font-medium
          shadow-sm
          hover:bg-gray-50
          hover:dark:bg-gray-800

          focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600

          disabled:opacity-50"
        >
          Cancel
        </button>
        <button
          type="submit"
          disabled={isSubmitting}
          className="
          cursor-pointer
          rounded-md
          border
          border-transparent
          bg-blue-600
          hover:bg-blue-700
          py-2
          px-4
          text-sm
          font-medium
          text-white
          shadow-sm

          focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600

          disabled:opacity-50"
        >
          {isSubmitting ? 'Saving...' : 'Save'}
        </button>
      </div>
    </form>
  )
}