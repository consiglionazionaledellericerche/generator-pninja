  const selectOptionClassName = `scheme-light dark:scheme-dark outline-0 hover:outline-2 hover:-outline-offset-2 hover:outline-blue-600 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-600 rounded-md mt-1 border-none bg-slate-200 text-slate-900 dark:bg-gray-800 dark:text-gray-300 text-sm/6 py-1.5 px-3 text-base appearance-none checked:bg-slate-300 checked:text-black dark:checked:bg-gray-700 dark:checked:text-white`;
<%  } -%>
<%  if (hasSelectNotMultiple) {-%>
  const selectChevronClassName =
    'pointer-events-none col-start-1 row-start-1 mt-3 mr-2 size-5 self-center justify-self-end text-gray-500 sm:size-4';
<%  } -%>
  return (
    <form onSubmit={handleSubmit(handleFormSubmit)} noValidate>
      <div className="max-w-5xl mx-auto space-y-4">
<%    for({name, type, validations} of entity.body) {-%>
<%      if(type === 'Blob' || type === 'AnyBlob' || type === 'ImageBlob') {-%>
        {renderFileField(
          '<%-to.snake(name)%>',
          <%-JSON.stringify(validations.reduce((acc, { key, value }) => { return { ...acc, [key]: value};}, {}))%>,
          <%= to.camel(entity.name)%>?.<%-to.snake(name)%>_path,
          <%= to.camel(entity.name)%>?.<%-to.snake(name)%>_name,
          <%= to.camel(entity.name)%>?.<%-to.snake(name)%>_type,
          t('entities.<%-to.snake(entity.name)%>.<%-to.snake(name)%>'),
          <%- type === 'ImageBlob' ? `'image/*'` : `undefined` %>,
          <%- getMinbytes(validations) ?? `undefined` %>,
          <%- getMaxbytes(validations) ?? `undefined` %>
        )}
<%      } else {-%>
        <div>
          <label htmlFor="<%= to.snake(name) %>" className="block text-sm font-medium flex items-center gap-1">
            {t('entities.<%-to.snake(entity.name)%>.<%-to.snake(name)%>')}
            <InfoValidations validations={<%-JSON.stringify(validations.reduce((acc, { key, value }) => { return { ...acc, [key]: value};}, {}))%>} />
          </label>
<%= getField(type, name, validations) -%>
          {errors?.<%= to.snake(name) %>?.message && (
<%      if(type !== 'Blob' && type !== 'AnyBlob' && type !== 'ImageBlob') {-%>
            <p className="mt-1 text-sm text-red-600">{errors.<%= to.snake(name) %>.message}</p>
<%      }-%>
<%      if(type === 'Blob' || type === 'AnyBlob' || type === 'ImageBlob') {-%>
            <p className="mt-1 text-sm text-red-600">{t(errors.<%= to.snake(name) %>.message)}</p>
<%      }-%>
          )}
        </div>
<%      }-%>
<%    }-%>
<%    for({field, related, isArray, nullable} of relatedEntities) {-%>
        <div>
          <label htmlFor="<%= to.snake(field) %>" className="block text-sm font-medium flex items-center gap-1">
            {t('entities.<%-to.snake(entity.name)%>.<%-to.snake(field)%>')}
<%          if(!nullable) {-%>
            <InfoValidations validations={{"required":""}} />
<%          }-%>
          </label>
          <div className={selectContainerClassName}>
            <select
<%            if (isArray) {-%>
              multiple
              size={Math.min(10, Math.max(5, <%= to.camel(field) %>DataOptions.length)) + 1}
<%            }-%>
              id="<%= to.snake(field) %>"
              {...register('<%= to.snake(field) %><%if (!isArray) {%>_id<%}%>')}
              className={selectClassName(!!errors?.<%= to.snake(field) %><%if (!isArray) {%>_id<%}%>?.message)}>
<%            if (!isArray) {-%>
              {!loadingOptions && <%= to.camel(field) %>DataOptions.length > 0 && <option className={selectOptionClassName} value={''}></option>}
<%            }-%>
              {loadingOptions ? (
                <option className={selectOptionClassName} disabled>{t('common.select.loading')}</option>
              ) : (
                <%= to.camel(field) %>DataOptions.length === 0
                ? <option className={selectOptionClassName} disabled>{t('common.select.noOptions')}</option>
                : <%= to.camel(field) %>DataOptions.map(op => <option className={selectOptionClassName} key={op.id} value={op.id}>{op.label}</option>)
              )}
            </select>
<%            if (!isArray) {-%>
            <ChevronsUpDown aria-hidden="true" className={selectChevronClassName} />
<%            }-%>
          </div>
          {errors?.<%= to.snake(field) %><%if (!isArray) {%>_id<%}%>?.message && (
            <p className="mt-1 text-sm text-red-600">{errors.<%= to.snake(field) %><%if (!isArray) {%>_id<%}%>.message}</p>
          )}
        </div>
<%    }-%>
<%    for({foreignId, related, isArray, nullable} of foreignIds) {-%>
        <div>
          <label htmlFor="<%= to.snake(foreignId) %>" className="block text-sm font-medium flex items-center gap-1">
            {t('entities.<%-to.snake(entity.name)%>.<%-to.snake(foreignId)%>')}
<%          if(!nullable) {-%>
            <InfoValidations validations={{"required":""}} />
<%          }-%>
          </label>
          <div className={selectContainerClassName}>
            <select
              id="<%= to.snake(foreignId) %>"
              {...register('<%= to.snake(foreignId) %>')}
              className={selectClassName(!!errors?.<%= to.snake(foreignId) %>?.message)}>
              {!loadingOptions && <%= to.camel(foreignId) %>DataOptions.length > 0 && <option className={selectOptionClassName} value={''}></option>}
              {loadingOptions ? (
                <option className={selectOptionClassName} disabled>{t('common.select.loading')}</option>
              ) : (
                <%= to.camel(foreignId) %>DataOptions.length === 0
                ? <option className={selectOptionClassName} disabled>{t('common.select.noOptions')}</option>
                : <%= to.camel(foreignId) %>DataOptions.map(op => <option className={selectOptionClassName} key={op.id} value={op.id}>{op.label}</option>)
              )}
            </select>
<%            if (!isArray) {-%>
            <ChevronsUpDown aria-hidden="true" className={selectChevronClassName} />
<%            }-%>
          </div>
          {errors?.<%= to.snake(foreignId) %>?.message && (
            <p className="mt-1 text-sm text-red-600">{errors.<%= to.snake(foreignId) %>.message}</p>
          )}
        </div>
<%    }-%>
      </div>
      <div className="flex justify-center gap-4 my-8">
        <button type="button" onClick={onCancel} className="cancel-button">
          {t('actions.crud.cancel')}
        </button>
        <button
          data-shortcut="ctrl+enter"
          type="submit"
          disabled={isSubmitting}
          className="primary-button"
        >
          {t(isSubmitting ? 'actions.crud.saving' : 'actions.crud.save')}
        </button>
      </div>
    </form>
  );
}
