<%
const enumsToImport = [];
for({type} of entity.body) {
  if ((enums.filter(enm => enm.name === type)).length === 1) {
    enumsToImport.push(type);
  }
}
const hasSelect = (relatedEntities.length + foreignIds.length) > 0;
const hasSelectNotMultiple = (relatedEntities.filter(({isArray}) => !isArray).length + foreignIds.length) > 0;
const isNullable = (validations) => !validations.reduce((required, validation) => required || validation.key === 'required', false);
const isEmail = (name) => name.toLowerCase().includes('email');
const fieldTypeToSchema = (type) => {
    const typeMap = {
        'String': 'string',
        'Integer': 'number',
        'Long': 'number',
        'BigDecimal': 'number',
        'Float': 'number',
        'Double': 'number',
        'Boolean': 'boolean',
        'LocalDate': 'string',
        'ZonedDateTime': 'string',
        'Instant': 'string',
        'Duration': 'number',
        'UUID': 'uuid',
        'TextBlob': 'string',
        'Blob': 'string',
        'ImageBlob': 'string',
    };
    return typeMap[type] || 'string';
}
const fieldTypeToInputType = (type) => {
    const typeMap = {
        'String': 'text',
        'Integer': 'number',
        'Long': 'number',
        'BigDecimal': 'number',
        'Float': 'number',
        'Double': 'number',
        'Boolean': 'checkbox',
        'LocalDate': 'date',
        'ZonedDateTime': 'datetime-local',
        'Instant': 'datetime-local',
        'Duration': 'number',
        'TextBlob': 'string',
        'Blob': 'string',
        'ImageBlob': 'string'
    };
    return typeMap[type] || 'string';
}
const fieldTypeToInputStep = (type) => {
    const stepMap = {
        'BigDecimal': 'any',
        'Float': 'any',
        'Double': 'any',
        'ZonedDateTime': 1,
        'Instant': 1
    };
    return stepMap[type] || null;
}

const getField = (type, name) => {
    if ((enums.filter(enm => enm.name === type)).length === 1) {
-%>
          <div className={selectContainerClassName}>
            <select
              id="<%= to.snake(name) %>"
              {...register('<%= to.snake(name) %>')}
              className={selectClassName(!!errors?.<%= to.snake(name) %>?.message)}
            >
              <option className={selectOptionClassName} value={''}></option>
              {Object.values(<%= type %>).map((<%= to.snake(name) %>) => (
                <option className={selectOptionClassName} key={<%= to.snake(name) %>} value={<%= to.snake(name) %>}>
                  {<%= to.snake(name) %>}
                </option>
              ))}
            </select>
            <ChevronsUpDown aria-hidden="true" className={selectChevronClassName} />
          </div>
<%    } else {
    const T = fieldTypeToInputType(type);
    const STEP = fieldTypeToInputStep(type);
-%>
          <input
            type="<%- T %>"
<%          if (!!STEP) {-%>
            step="<%- STEP %>"
<%          }-%>
            id="<%= to.snake(name) %>"
            {...register('<%= to.snake(name) %>'<% if(T === 'number') {%>, { valueAsNumber: true }<%}%>)}
            className={inputClassName(!!errors?.<%= to.snake(name) %>?.message)}
          />
<%}}
-%>
import { useEffect, useState } from 'react';
import { useForm } from 'react-hook-form';
import { zodResolver } from '@hookform/resolvers/zod';
import { useTranslation } from 'react-i18next';
import * as z from 'zod';
import { I<%= entity.name %> } from '../../shared/model/<%= to.slug(entity.name)%>.model';
<%for(related of [...new Set(relatedEntities.map(({related}) => related)), ...new Set(foreignIds.map(({related}) => related))]) {-%>
<%  if (related !== entity.name) {-%>
import { I<%= related %> } from '../../shared/model/<%= to.slug(related)%>.model';
<%  }-%>
<%}-%>
import { useApi } from '../../hooks/useApi';
import { HttpError } from '../../hooks/useApi';
import { useNotifications } from '../../contexts/NotificationContext';
<% if (hasSelectNotMultiple) {-%>
import { ChevronsUpDown } from 'lucide-react';
<% } -%>
<%- [...new Set(enumsToImport)].map(enm => `import { ${enm} } from '../../shared/model/enumerations/${to.slug(enm)}.model';`).join("\n") %>

const <%= to.camel(entity.name)%>Schema = z.object({
<%  for({name, type, validations} of entity.body) {-%>
<%    if(fieldTypeToSchema(type) === 'string') {-%>
  <%= to.snake(name) %>: z
    .string()
<%- isEmail(name) ? `    .email()\n` : '' -%>
    .transform((val) => val || undefined)
    .pipe(z.string().<%= isNullable(validations) ? 'nullable' : 'nonempty' %>()),
<%    } if(fieldTypeToSchema(type) === 'uuid') {-%>
  <%= to.snake(name) %>: z
    .string()
    .uuid()
    .transform((val) => val || undefined)
    .pipe(z.string().<%= isNullable(validations) ? 'nullable' : 'nonempty' %>()),
<%    } if(fieldTypeToSchema(type) === 'number') {-%>
  <%= to.snake(name) %>: z.number()<%= isNullable(validations) ? '.nullable()' : '.min(1)' %>,
<%    } if(fieldTypeToSchema(type) === 'boolean') {-%>
  <%= to.snake(name) %>: z.boolean()<%= isNullable(validations) ? '.optional()' : '.default(false)' %>,
<%    } -%>
<%  } -%>
<%  for({field, related, nullable, isArray} of relatedEntities) {-%>
<%    if(isArray) {-%>
  <%= to.snake(field) %>: z.array(z.string())<% if (!nullable && false) {-%>.nonempty()<%}-%>,
<%    } else {-%>
  <%= to.snake(field) %>_id: z.string()<%- nullable ? ',' : ''%>
<%      if (!nullable) {-%>
    .transform((val) => val || undefined)
    .pipe(z.string().nonempty()),
<%      }-%>
<%    }-%>
<%  }-%>
<%  for({foreignId, related, nullable} of foreignIds) {-%>
  <%= to.snake(foreignId) %>: z.string()<%- nullable ? ',' : ''%>
<%    if (!nullable) {-%>
    .transform((val) => val || undefined)
    .pipe(z.string().nonempty()),
<%    }-%>
<%  }-%>
});

type <%= entity.name %>FormData = z.infer<typeof <%= to.camel(entity.name)%>Schema>;

interface <%= entity.name %>FormProps {
  <%= to.camel(entity.name)%>?: I<%= entity.name %>;
  onSubmit: (data: <%= entity.name %>FormData) => void;
  onCancel: () => void;
}

<% if (hasSelect) {-%>
interface SelectOption {
  id: number;
  label: string;
}
<% } -%>

export function <%= entity.name %>Form({ <%= to.camel(entity.name)%>, onSubmit, onCancel }: <%= entity.name%>FormProps) {
  const { t } = useTranslation();
  const { addNotification } = useNotifications();
  const { fetch } = useApi();
<% for({field} of relatedEntities) {-%>
  const [<%= to.camel((field)) %>DataOptions, <%= to.camel(`set_${(field)}_data_options`) %>] = useState<SelectOption[]>([]);
<% }-%>
<% for({foreignId} of foreignIds) {-%>
  const [<%= to.camel((foreignId)) %>DataOptions, <%= to.camel(`set_${(foreignId)}_data_options`) %>] = useState<SelectOption[]>([]);
<% }-%>
  const [loadingOptions, setLoadingOptions] = useState(true);

  const {
    register,
    handleSubmit,
    formState: { errors, isSubmitting },
    reset,
  } = useForm<<%= entity.name %>FormData>({
    resolver: zodResolver(<%= to.camel(entity.name)%>Schema),
  });

  const handleFormSubmit = async (data: <%= entity.name %>FormData) => {
    try {
      await onSubmit(data);
    } catch (error) {
      console.error('Form submission error:', error);
    }
  };

  useEffect(() => {
    const fetchOptions = async () => {
      setLoadingOptions(true);
<%  for({field, related, labelField, cardinality} of relatedEntities) {
  let filter = '';
  if (cardinality === "OneToOne") {
    filter += `?available_for_${to.snake(entity.name)}=\${${to.camel(entity.name)}?.id}`;
  }
-%>
      try {
        const <%= to.camel(field) %>Response = await fetch(`/api/<%=to.slug(pluralize(related))%><%-filter%>`);
        const <%= to.camel(field) %>Data = await <%= to.camel(field) %>Response.json();
        <%= to.camel(`set_${field}_data_options`) %>((<%= to.camel(field) %>Data.map((item: I<%-related%>) => ({
          id: item.id,
<%        if (labelField === 'id') {-%>
          label: `${item.id}`
<%        } else {-%>
          label: `${item.<%-to.snake(labelField)%> || ''} (ID: ${item.id})`
<%        }-%>
        }))).sort((a: SelectOption, b: SelectOption) => a.label.localeCompare(b.label, undefined, { numeric: true })));
      } catch (error: unknown) {
        console.error('Error fetching options:', error);
        addNotification({
          type: 'error',
          message: `${t('errors.options.load')} ${t('entities.<%-to.snake(entity.name)%>.<%-to.snake(field)%>')}`,
          details: error instanceof Error ? error.message : undefined,
          techDetails: error instanceof HttpError ? error.details : undefined,
          duration: 10000,
        });
      }
<%  }-%>
<%  for({foreignId, related, labelField} of foreignIds) {-%>
      try {
        const <%= to.camel(foreignId) %>Response = await fetch('/api/<%=to.slug(pluralize(related))%>');
        const <%= to.camel(foreignId) %>Data = await <%= to.camel(foreignId) %>Response.json();
        <%= to.camel(`set_${foreignId}_data_options`) %>((<%= to.camel(foreignId) %>Data.map((item: I<%-related%>) => ({
          id: item.id,
<%        if (labelField === 'id') {%>
          label: `${item.id}`
<%        } else {-%>
          label: `${item.<%-to.snake(labelField)%> || ''} (ID: ${item.id})`
<%        }-%>
        }))).sort((a: SelectOption, b: SelectOption) => a.label.localeCompare(b.label, undefined, { numeric: true })));
      } catch (error: unknown) {
        console.error('Error fetching options:', error);
        addNotification({
          type: 'error',
          message: `${t('errors.options.load')} ${t('entities.<%-to.snake(entity.name)%>.<%-to.snake(foreignId)%>')}`,
          details: error instanceof Error ? error.message : undefined,
          techDetails: error instanceof HttpError ? error.details : undefined,
          duration: 10000,
        });
      }
<%  }-%>
      setLoadingOptions(false);
    };

    fetchOptions();
  }, [fetch, addNotification, t]);

  useEffect(() => {
    if (<%= to.camel(entity.name)-%>) {
      reset({
<% for({name, type, validations} of entity.body) {-%>
        <%= to.snake(name) %>: <%= to.camel(entity.name)%>?.<%= to.snake(name) %>,
<% } -%>
<% for({field, related, isArray} of relatedEntities) {-%>
<%  if (isArray) {-%>
        <%= to.snake(field) %>: <%= to.camel(entity.name)%>?.<%= to.snake(field) %>?.map(item => String(item.id)),
<%  } else {-%>
        <%= to.snake(field) %>_id: String(<%= to.camel(entity.name)%>?.<%= to.snake(field) %>_id || ''),
<%  }-%>
<% }-%>
<% for({foreignId, related} of foreignIds) {-%>
        <%= to.snake(foreignId) %>: String(<%= to.camel(entity.name)%>?.<%= to.snake(foreignId) %> || ''),
<% }-%>
      });
    }
  }, [<%= to.camel(entity.name)%>, reset, loadingOptions]);

  const inputClassName = (hasErrors = false) =>
    `scheme-light dark:scheme-dark outline-0${hasErrors ? ' outline-2 -outline-offset-2 outline-red-500' : ''} focus:outline-2 focus:-outline-offset-2 ${hasErrors ? 'focus:outline-red-500' : 'focus:outline-blue-600'} rounded-lg block w-full mt-3 border-none bg-slate-200 text-slate-900 dark:bg-gray-800 dark:text-gray-300 text-sm/6 py-1.5 px-3`;
<%  if (hasSelect) {-%>
  const selectContainerClassName = 'grid grid-cols-1';
  const selectClassName = (hasErrors = false) =>
    `scheme-light dark:scheme-dark outline-0${hasErrors ? ' outline-2 -outline-offset-2 outline-red-500' : ''} focus:outline-2 focus:-outline-offset-2 ${hasErrors ? 'focus:outline-red-500' : 'focus:outline-blue-600'} rounded-lg block w-full mt-3 border-none bg-slate-200 text-slate-900 dark:bg-gray-800 dark:text-gray-300 text-sm/6 py-1.5 p-2 text-base appearance-none col-start-1 row-start-1`;
  const selectOptionClassName = `scheme-light dark:scheme-dark outline-0 hover:outline-2 hover:-outline-offset-2 hover:outline-blue-600 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-600 rounded-md mt-1 border-none bg-slate-200 text-slate-900 dark:bg-gray-800 dark:text-gray-300 text-sm/6 py-1.5 px-3 text-base appearance-none checked:bg-slate-300 checked:text-black dark:checked:bg-gray-700 dark:checked:text-white`;
<%  } -%>
<%  if (hasSelectNotMultiple) {-%>
  const selectChevronClassName =
    'pointer-events-none col-start-1 row-start-1 mt-3 mr-2 size-5 self-center justify-self-end text-gray-500 sm:size-4';
<%  } -%>
  return (
    <form onSubmit={handleSubmit(handleFormSubmit)}>
      <div className="max-w-5xl mx-auto space-y-4">
<%    for({name, type, validations} of entity.body) {-%>
        <div>
          <label htmlFor="<%= to.snake(name) %>" className="block text-sm font-medium">
            {t('entities.<%-to.snake(entity.name)%>.<%-to.snake(name)%>')}
          </label>
<%= getField(type, name) -%>
          {errors?.<%= to.snake(name) %>?.message && (
            <p className="mt-1 text-sm text-red-600">{errors.<%= to.snake(name) %>.message}</p>
          )}
        </div>
<%    }-%>
<%    for({field, related, isArray} of relatedEntities) {-%>
        <div>
          <label htmlFor="<%= to.snake(field) %>" className="block text-sm font-medium">
            {t('entities.<%-to.snake(entity.name)%>.<%-to.snake(field)%>')}
          </label>
          <div className={selectContainerClassName}>
            <select
<%            if (isArray) {-%>
              multiple
              size={Math.min(10, Math.max(5, <%= to.camel(field) %>DataOptions.length)) + 1}
<%            }-%>
              id="<%= to.snake(field) %>"
              {...register('<%= to.snake(field) %><%if (!isArray) {%>_id<%}%>')}
              className={selectClassName(!!errors?.<%= to.snake(field) %><%if (!isArray) {%>_id<%}%>?.message)}>
<%            if (!isArray) {-%>
              {!loadingOptions && <%= to.camel(field) %>DataOptions.length > 0 && <option className={selectOptionClassName} value={''}></option>}
<%            }-%>
              {loadingOptions ? (
                <option className={selectOptionClassName} disabled>{t('common.select.loading')}</option>
              ) : (
                <%= to.camel(field) %>DataOptions.length === 0
                ? <option className={selectOptionClassName} disabled>{t('common.select.noOptions')}</option>
                : <%= to.camel(field) %>DataOptions.map(op => <option className={selectOptionClassName} key={op.id} value={op.id}>{op.label}</option>)
              )}
            </select>
<%            if (!isArray) {-%>
            <ChevronsUpDown aria-hidden="true" className={selectChevronClassName} />
<%            }-%>
          </div>
          {errors?.<%= to.snake(field) %><%if (!isArray) {%>_id<%}%>?.message && (
            <p className="mt-1 text-sm text-red-600">{errors.<%= to.snake(field) %><%if (!isArray) {%>_id<%}%>.message}</p>
          )}
        </div>
<%    }-%>
<%    for({foreignId, related, isArray} of foreignIds) {-%>
        <div>
          <label htmlFor="<%= to.snake(foreignId) %>" className="block text-sm font-medium">
            {t('entities.<%-to.snake(entity.name)%>.<%-to.snake(foreignId)%>')}
          </label>
          <div className={selectContainerClassName}>
            <select
              id="<%= to.snake(foreignId) %>"
              {...register('<%= to.snake(foreignId) %>')}
              className={selectClassName(!!errors?.<%= to.snake(foreignId) %>?.message)}>
              {!loadingOptions && <%= to.camel(foreignId) %>DataOptions.length > 0 && <option className={selectOptionClassName} value={''}></option>}
              {loadingOptions ? (
                <option className={selectOptionClassName} disabled>{t('common.select.loading')}</option>
              ) : (
                <%= to.camel(foreignId) %>DataOptions.length === 0
                ? <option className={selectOptionClassName} disabled>{t('common.select.noOptions')}</option>
                : <%= to.camel(foreignId) %>DataOptions.map(op => <option className={selectOptionClassName} key={op.id} value={op.id}>{op.label}</option>)
              )}
            </select>
<%            if (!isArray) {-%>
            <ChevronsUpDown aria-hidden="true" className={selectChevronClassName} />
<%            }-%>
          </div>
          {errors?.<%= to.snake(foreignId) %>?.message && (
            <p className="mt-1 text-sm text-red-600">{errors.<%= to.snake(foreignId) %>.message}</p>
          )}
        </div>
<%    }-%>
      </div>
      <div className="flex justify-center gap-4 my-8">
        <button type="button" onClick={onCancel} className="cancel-button">
          Cancel
        </button>
        <button type="submit" disabled={isSubmitting} className="primary-button">
          {isSubmitting ? 'Saving...' : 'Save'}
        </button>
      </div>
    </form>
  )
}