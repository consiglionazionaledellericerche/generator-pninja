<%
const isNullable = (validations) => !validations.reduce((required, validation) => required || validation.key === 'required', false);

const fieldTypeToSchema = (type) => {
    const typeMap = {
        'String': 'string',
        'Integer': 'number',
        'Long': 'number',
        'BigDecimal': 'number',
        'Float': 'number',
        'Double': 'number',
        'Boolean': 'boolean',
        'LocalDate': 'string',
        'ZonedDateTime': 'string',
        'Instant': 'string',
        'TextBlob': 'string',
        'Blob': 'string',
        'ImageBlob': 'string'
    };

    return typeMap[type] || 'string';
}

const fieldTypeInputType = (type) => {
    const typeMap = {
        'String': 'text',
        'Integer': 'number',
        'Long': 'number',
        'BigDecimal': 'number',
        'Float': 'number',
        'Double': 'number',
        'Boolean': 'boolean',
        'LocalDate': 'string',
        'ZonedDateTime': 'string',
        'Instant': 'string',
        'TextBlob': 'string',
        'Blob': 'string',
        'ImageBlob': 'string'
    };

    return typeMap[type] || 'string';
}
-%>
import { useEffect } from 'react';
import { useForm } from 'react-hook-form';
import { zodResolver } from '@hookform/resolvers/zod';
import { useTranslation } from 'react-i18next';
import * as z from 'zod';
import { I<%= entity.name %>, defaultValue } from '../../shared/model/<%= to.slug(entity.name)%>.model';

const <%= to.camel(entity.name)%>Schema = z.object({
<% for({name, type, validations} of entity.body) { -%>
  <%= to.snake(name) %>: z.<%= fieldTypeToSchema(type) %>()<%= isNullable(validations) ? '.nullable()' : '.nonempty()' %>,
<% } -%>
});

type <%= entity.name %>FormData = z.infer<typeof <%= to.camel(entity.name)%>Schema>;

interface <%= entity.name %>FormProps {
  <%= to.camel(entity.name)%>?: I<%= entity.name %>;
  onSubmit: (data: <%= entity.name %>FormData) => void;
  onCancel: () => void;
}

export function <%= entity.name %>Form({ <%= to.camel(entity.name)%>, onSubmit, onCancel }: <%= entity.name%>FormProps) {
  const { t } = useTranslation();
  const {
    register,
    handleSubmit,
    formState: { errors, isSubmitting },
    reset,
  } = useForm<<%= entity.name %>FormData>({
    resolver: zodResolver(<%= to.camel(entity.name)%>Schema),
    defaultValues: <%= to.camel(entity.name)%> || defaultValue,
  });

  const handleFormSubmit = async (data: <%= entity.name %>FormData) => {
    console.log('handleFormSubmit');
    try {
      await onSubmit(data);
      reset(); // Reset form after successful submission
    } catch (error) {
      console.error('Form submission error:', error);
    }
  };

  useEffect(() => {
    if (<%= to.camel(entity.name)%>) {
      reset(<%= to.camel(entity.name)%>);
    }
  }, [<%= to.camel(entity.name)%>, reset]);

  const inputClassName =
    'mt-3 block w-full rounded-lg border-none bg-slate-200 text-slate-900 dark:bg-gray-800 dark:text-gray-300 py-1.5 px-3 text-sm/6 focus:outline-none data-[focus]:outline-2 data-[focus]:-outline-offset-2 data-[focus]:dark:outline-white/25';

  return (
    <form onSubmit={handleSubmit(handleFormSubmit)} className="space-y-6">
      <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
<%    for({name, type, validations} of entity.body) { -%>
        <div>
          <label htmlFor="<%= to.snake(name) %>" className="block text-sm font-medium">
            {t('entities.<%-to.snake(entity.name)%>.<%-to.snake(name)%>')}
          </label>
          <input
            type="<%= fieldTypeInputType(type)%>"
            id="<%= to.snake(name) %>"
            {...register('<%= to.snake(name) %>'<% if(fieldTypeInputType(type) === 'number') {%>, { valueAsNumber: true }<%}%>)}
            className={inputClassName}
          />
          {errors.<%= to.snake(name) %> && (
            <p className="mt-1 text-sm text-red-600">{errors.<%= to.snake(name) %>.message}</p>
          )}
        </div>
<%    }-%>
      </div>
      <div className="flex justify-end gap-4">
        <button
          type="button"
          onClick={onCancel}
          className="rounded-md border border-gray-300 bg-white dark:bg-transparent py-2 px-4 text-sm font-medium shadow-sm hover:bg-gray-50 hover:dark:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
        >
          Cancel
        </button>
        <button
          type="submit"
          disabled={isSubmitting}
          className="rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 disabled:opacity-50"
        >
          {isSubmitting ? 'Saving...' : 'Save'}
        </button>
      </div>
    </form>
  )
}