// AuditView.tsx
import { useEffect, useState } from 'react';
import { useParams, Link, useNavigate } from 'react-router-dom';
import { useTranslation } from 'react-i18next';
import {
  ArrowLeft,
  ArrowRight,
  Clock,
  User,
  Globe,
  Monitor,
  Tag,
  GitCompare,
  History,
} from 'lucide-react';
import axiosInstance from '../../shared/axiosInstance';
import { useNotifications } from '../../contexts/NotificationContext';
import { SimpleLoader } from '../../components/SimpleLoader';

interface IAudit {
  id: number;
  event: string;
  auditable_type: string;
  auditable_id: number;
  user_id: string | null;
  user_type: string | null;
  old_values: Record<string, unknown> | [];
  new_values: Record<string, unknown> | [];
  url: string | null;
  ip_address: string | null;
  user_agent: string | null;
  tags: string | null;
  created_at: string;
  updated_at: string;
  auditable?: unknown;
}

export default function AuditView() {
  const { id } = useParams<{ id: string }>();
  const { t, i18n } = useTranslation();
  const navigate = useNavigate();
  const { addNotification } = useNotifications();
  const [loading, setLoading] = useState(true);
  const [audit, setAudit] = useState<IAudit | null>(null);

  useEffect(() => {
    if (!id) return;

    axiosInstance
      .get(`/api/audits/${id}`)
      .then((response) => {
        setAudit(response.data);
        setLoading(false);
      })
      .catch((error) => {
        console.error('ERR:', error);
        setLoading(false);
        addNotification({
          type: 'error',
          message: error.message,
        });
      });
  }, [id, addNotification]);

  const getEventBadgeClass = (event: string) => {
    const classes = {
      created: 'bg-green-300 text-green-950 dark:bg-green-700 dark:text-green-100',
      updated: 'bg-blue-300 text-blue-950 dark:bg-blue-700 dark:text-blue-100',
      deleted: 'bg-red-300 text-red-950 dark:bg-red-700 dark:text-red-100',
      restored: 'bg-purple-300 text-purple-950 dark:bg-purple-700 dark:text-purple-100',
    };
    return classes[event as keyof typeof classes] || 'bg-gray-100 text-gray-800';
  };

  const formatModelName = (fullName: string) => {
    const parts = fullName.split('\\');
    return parts[parts.length - 1];
  };

  const formatValue = (value: unknown): string => {
    if (value === null || value === undefined) return '-';
    if (typeof value === 'boolean') return value ? 'true' : 'false';
    if (typeof value === 'object') return JSON.stringify(value, null, 2);
    return String(value);
  };

  if (loading) {
    return <SimpleLoader />;
  }

  if (!audit) {
    return (
      <div className="text-center py-12">
        <p className="text-xl text-gray-600 dark:text-gray-400">{t('audit:notFound')}</p>
        <Link to="/audits" className="text-link mt-4 inline-block">
          {t('audit:backToList')}
        </Link>
      </div>
    );
  }

  const oldValues = (audit.old_values && Object.entries(audit.old_values)) || [];
  const newValues = (audit.new_values && Object.entries(audit.new_values)) || [];
  interface Change {
    old: unknown;
    new: unknown;
  }

  const changesArray: [string, Change][] = (newValues.length ? newValues : oldValues).map(
    (v, i) => [
      v[0],
      {
        old: oldValues.length ? oldValues[i][1] : null,
        new: newValues.length ? newValues[i][1] : null,
      },
    ]
  );

  return (
    <>
      <div className="mb-6">
        <button onClick={() => navigate(-1)} className="secondary-button mb-4">
          <ArrowLeft size={16} />
          {t('actions.back')}
        </button>
        <div className="flex items-center justify-between">
          <h1 className="text-2xl font-bold">
            {t('audit:logTitle')} #{audit.id}
          </h1>
          <Link
            to={`/audits/entity/${encodeURIComponent(audit.auditable_type)}/${audit.auditable_id}`}
            className="secondary-button"
          >
            <History size={16} />
            {t('audit:allChanges')}
          </Link>
        </div>
      </div>

      {/* Event Info Card */}
      <div className="bg-white dark:bg-slate-800 rounded-lg shadow p-6 mb-6">
        <h2 className="text-lg font-semibold mb-4">{t('audit:eventInformation')}</h2>
        <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div className="flex items-start gap-3">
            <Tag className="text-gray-500 mt-1" size={20} />
            <div>
              <p className="text-sm text-gray-600 dark:text-gray-400">{t('audit:eventType')}</p>
              <span
                className={`inline-block px-3 py-1 text-sm font-semibold rounded-full mt-1 ${getEventBadgeClass(audit.event)}`}
              >
                {t(`audit:events.${audit.event}`)}
              </span>
            </div>
          </div>

          <div className="flex items-start gap-3">
            <Clock className="text-gray-500 mt-1" size={20} />
            <div>
              <p className="text-sm text-gray-600 dark:text-gray-400">{t('audit:dateTime')}</p>
              <p className="font-medium">
                {new Date(audit.created_at).toLocaleString(i18n.language, {
                  dateStyle: 'long',
                  timeStyle: 'medium',
                })}
              </p>
            </div>
          </div>

          <div className="flex items-start gap-3">
            <User className="text-gray-500 mt-1" size={20} />
            <div>
              <p className="text-sm text-gray-600 dark:text-gray-400">{t('audit:user')}</p>
              <p className="font-medium">
                {audit.user_id ? (
                  <Link to={`/audits/user/${audit.user_id}`} className="text-link">
                    {audit.user_id}
                  </Link>
                ) : (
                  <span>--</span>
                )}
              </p>
            </div>
          </div>

          <div className="flex items-start gap-3">
            <Globe className="text-gray-500 mt-1" size={20} />
            <div>
              <p className="text-sm text-gray-600 dark:text-gray-400">{t('audit:ipAddress')}</p>
              <p className="font-medium">{audit.ip_address || '-'}</p>
            </div>
          </div>
        </div>
      </div>

      {/* Auditable Model Card */}
      <div className="bg-white dark:bg-slate-800 rounded-lg shadow p-6 mb-6">
        <h2 className="text-lg font-semibold mb-4">{t('audit:affectedRecord')}</h2>
        <div className="space-y-2">
          <div>
            <span className="text-sm text-gray-600 dark:text-gray-400">
              {t('audit:modelType')}:
            </span>
            <span className="ml-2 font-medium">{formatModelName(audit.auditable_type)}</span>
          </div>
          <div>
            <span className="text-sm text-gray-600 dark:text-gray-400">
              {t('audit:columns.recordId')}:
            </span>
            <span className="ml-2 font-medium">{audit.auditable_id}</span>
          </div>
          {audit.url && (
            <div>
              <span className="text-sm text-gray-600 dark:text-gray-400">{t('audit:url')}:</span>
              <span className="ml-2 font-mono text-sm break-all">{audit.url}</span>
            </div>
          )}
        </div>
      </div>

      <div className="bg-white dark:bg-slate-800 rounded-lg shadow overflow-hidden mb-6 pt-6">
        <h2 className="text-lg font-semibold mb-4 px-6 flex items-center gap-2">
          <GitCompare size={20} />
          {t('audit:compareChanges')}
        </h2>
        <div className="overflow-x-auto">
          <table className="w-full">
            <thead className="bg-gray-50 dark:bg-slate-700">
              <tr>
                <th className="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider w-1/4">
                  {t('audit:field')}
                </th>
                <th className="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider w-3/8 bg-red-50 dark:bg-red-900/20">
                  <div className="flex items-center gap-2">
                    <span className="w-2 h-2 rounded-full bg-red-500"></span>
                    {t('audit:oldValue')}
                  </div>
                </th>
                <th className="px-6 py-3 text-center w-16"></th>
                <th className="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider w-3/8 bg-green-50 dark:bg-green-900/20">
                  <div className="flex items-center gap-2">
                    <span className="w-2 h-2 rounded-full bg-green-500"></span>
                    {t('audit:newValue')}
                  </div>
                </th>
              </tr>
            </thead>
            <tbody className="divide-y divide-gray-200 dark:divide-gray-700">
              {changesArray.length === 0 ? (
                <tr>
                  <td colSpan={4} className="px-6 py-8 text-center text-gray-500">
                    {t('audit:noChangesToDisplay')}
                  </td>
                </tr>
              ) : (
                changesArray.map(([field, change]) => (
                  <tr key={String(field)} className="hover:bg-gray-50 dark:hover:bg-slate-700/50">
                    <td className="px-6 py-4 font-medium text-sm">
                      <div className="flex items-center gap-2">
                        <span className="w-2 h-2 rounded-full bg-yellow-500"></span>
                        {field}
                      </div>
                    </td>
                    <td className="px-6 py-4 text-sm bg-red-50/50 dark:bg-red-900/10">
                      <pre className="whitespace-pre-wrap break-all font-mono text-xs text-red-800 dark:text-red-300">
                        {formatValue(change.old)}
                      </pre>
                    </td>
                    <td className="px-6 py-4 text-center">
                      <ArrowRight
                        size={16}
                        className="text-yellow-600 dark:text-yellow-400 mx-auto"
                      />
                    </td>
                    <td className="px-6 py-4 text-sm bg-green-50/50 dark:bg-green-900/10">
                      <pre className="whitespace-pre-wrap break-all font-mono text-xs text-green-800 dark:text-green-300">
                        {formatValue(change.new)}
                      </pre>
                    </td>
                  </tr>
                ))
              )}
            </tbody>
          </table>
        </div>
      </div>

      {/* Request Info Card */}
      {audit.user_agent && (
        <div className="bg-white dark:bg-slate-800 rounded-lg shadow p-6 mb-6">
          <h2 className="text-lg font-semibold mb-4 flex items-center gap-2">
            <Monitor size={20} />
            {t('audit:requestInformation')}
          </h2>
          <div>
            <p className="text-sm text-gray-600 dark:text-gray-400 mb-1">{t('audit:userAgent')}</p>
            <p className="font-mono text-sm break-all">{audit.user_agent}</p>
          </div>
        </div>
      )}

      {/* Tags */}
      {audit.tags && (
        <div className="bg-white dark:bg-slate-800 rounded-lg shadow p-6">
          <h2 className="text-lg font-semibold mb-4">{t('audit:tags')}</h2>
          <p className="font-mono text-sm">{audit.tags}</p>
        </div>
      )}
    </>
  );
}
