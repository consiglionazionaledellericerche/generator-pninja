// AuditCompare.tsx
import { useEffect, useState } from 'react';
import { useParams, Link, useNavigate } from 'react-router-dom';
import { useTranslation } from 'react-i18next';
import { ArrowLeft, ArrowRight, Clock, User, Eye } from 'lucide-react';
import axiosInstance from '../../shared/axiosInstance';
import { useNotifications } from '../../contexts/NotificationContext';
import { SimpleLoader } from '../../components/SimpleLoader';

interface IComparison {
  audit_id: number;
  event: string;
  auditable_type: string;
  auditable_id: number;
  user_id: string | null;
  created_at: string;
  changes: {
    [key: string]: {
      old: unknown;
      new: unknown;
      changed: boolean;
    };
  };
}

export default function AuditCompare() {
  const { id } = useParams<{ id: string }>();
  const { t, i18n } = useTranslation();
  const navigate = useNavigate();
  const { addNotification } = useNotifications();
  const [loading, setLoading] = useState(true);
  const [comparison, setComparison] = useState<IComparison | null>(null);

  useEffect(() => {
    if (!id) return;

    axiosInstance
      .get(`/api/audits/${id}/compare`)
      .then((response) => {
        setComparison(response.data);
        setLoading(false);
      })
      .catch((error) => {
        console.error('ERR:', error);
        setLoading(false);
        addNotification({
          type: 'error',
          message: error.message,
        });
      });
  }, [id, addNotification]);

  const getEventBadgeClass = (event: string) => {
    const classes = {
      created: 'bg-green-300 text-green-950 dark:bg-green-700 dark:text-green-100',
      updated: 'bg-blue-300 text-blue-950 dark:bg-blue-700 dark:text-blue-100',
      deleted: 'bg-red-300 text-red-950 dark:bg-red-700 dark:text-red-100',
      restored: 'bg-purple-300 text-purple-950 dark:bg-purple-700 dark:text-purple-100',
    };
    return classes[event as keyof typeof classes] || 'bg-gray-100 text-gray-800';
  };

  const formatModelName = (fullName: string) => {
    const parts = fullName.split('\\');
    return parts[parts.length - 1];
  };

  const formatValue = (value: unknown): string => {
    if (value === null || value === undefined) return '-';
    if (typeof value === 'boolean') return value ? 'true' : 'false';
    if (typeof value === 'object') return JSON.stringify(value, null, 2);
    return String(value);
  };

  const changesArray = comparison?.changes ? Object.entries(comparison.changes) : [];
  const changedCount = changesArray.filter(([_, change]) => change.changed).length;

  if (loading) {
    return <SimpleLoader />;
  }

  if (!comparison) {
    return (
      <div className="text-center py-12">
        <p className="text-xl text-gray-600 dark:text-gray-400">
          {t('audit:comparisonNotAvailable')}
        </p>
        <Link to="/audits" className="text-link mt-4 inline-block">
          {t('audit:backToList')}
        </Link>
      </div>
    );
  }

  return (
    <>
      <div className="mb-6">
        <button onClick={() => navigate(-1)} className="secondary-button mb-4">
          <ArrowLeft size={16} />
          {t('actions.back')}
        </button>
        <div className="flex items-center justify-between">
          <h1 className="text-2xl font-bold">{t('audit:compareChanges')}</h1>
          <Link to={`/audits/view/${comparison.audit_id}`} className="secondary-button">
            <Eye size={16} />
            {t('audit:viewFullAudit')}
          </Link>
        </div>
      </div>

      {/* Header Card */}
      <div className="bg-white dark:bg-slate-800 rounded-lg shadow p-6 mb-6">
        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
          <div className="flex items-start gap-3">
            <div>
              <p className="text-sm text-gray-600 dark:text-gray-400">{t('audit:columns.event')}</p>
              <span
                className={`inline-block px-3 py-1 text-sm font-semibold rounded-full mt-1 ${getEventBadgeClass(comparison.event)}`}
              >
                {t(`audit:events.${comparison.event}`)}
              </span>
            </div>
          </div>

          <div>
            <p className="text-sm text-gray-600 dark:text-gray-400">ID</p>
            <p className="font-medium">{comparison.auditable_id}</p>
          </div>

          <div>
            <p className="text-sm text-gray-600 dark:text-gray-400">{t('audit:columns.model')}</p>
            <p className="font-medium">{formatModelName(comparison.auditable_type)}</p>
          </div>

          <div className="flex items-start gap-2">
            <User className="text-gray-500 mt-1" size={16} />
            <div>
              <p className="text-sm text-gray-600 dark:text-gray-400">{t('audit:columns.user')}</p>
              <p className="font-medium">{comparison.user_id || '-'}</p>
            </div>
          </div>

          <div className="flex items-start gap-2">
            <Clock className="text-gray-500 mt-1" size={16} />
            <div>
              <p className="text-sm text-gray-600 dark:text-gray-400">{t('audit:columns.date')}</p>
              <p className="font-medium text-sm">
                {new Date(comparison.created_at).toLocaleString(i18n.language)}
              </p>
            </div>
          </div>
        </div>
      </div>

      {/* Comparison Table */}
      <div className="bg-white dark:bg-slate-800 rounded-lg shadow overflow-hidden">
        <div className="overflow-x-auto">
          <table className="w-full">
            <thead className="bg-gray-50 dark:bg-slate-700">
              <tr>
                <th className="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider w-1/4">
                  {t('audit:field')}
                </th>
                <th className="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider w-3/8 bg-red-50 dark:bg-red-900/20">
                  <div className="flex items-center gap-2">
                    <span className="w-2 h-2 rounded-full bg-red-500"></span>
                    {t('audit:oldValue')}
                  </div>
                </th>
                <th className="px-6 py-3 text-center w-16"></th>
                <th className="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider w-3/8 bg-green-50 dark:bg-green-900/20">
                  <div className="flex items-center gap-2">
                    <span className="w-2 h-2 rounded-full bg-green-500"></span>
                    {t('audit:newValue')}
                  </div>
                </th>
              </tr>
            </thead>
            <tbody className="divide-y divide-gray-200 dark:divide-gray-700">
              {changesArray.length === 0 ? (
                <tr>
                  <td colSpan={4} className="px-6 py-8 text-center text-gray-500">
                    {t('audit:noChangesToDisplay')}
                  </td>
                </tr>
              ) : (
                changesArray.map(([field, change]) => (
                  <tr key={field} className="hover:bg-gray-50 dark:hover:bg-slate-700/50">
                    <td className="px-6 py-4 font-medium text-sm">
                      <div className="flex items-center gap-2">
                        {change.changed && (
                          <span className="w-2 h-2 rounded-full bg-yellow-500"></span>
                        )}
                        {field}
                      </div>
                    </td>
                    <td className="px-6 py-4 text-sm bg-red-50/50 dark:bg-red-900/10">
                      <pre className="whitespace-pre-wrap break-all font-mono text-xs text-red-800 dark:text-red-300">
                        {formatValue(change.old)}
                      </pre>
                    </td>
                    <td className="px-6 py-4 text-center">
                      {change.changed && (
                        <ArrowRight
                          size={16}
                          className="text-yellow-600 dark:text-yellow-400 mx-auto"
                        />
                      )}
                    </td>
                    <td className="px-6 py-4 text-sm bg-green-50/50 dark:bg-green-900/10">
                      <pre className="whitespace-pre-wrap break-all font-mono text-xs text-green-800 dark:text-green-300">
                        {formatValue(change.new)}
                      </pre>
                    </td>
                  </tr>
                ))
              )}
            </tbody>
          </table>
        </div>
      </div>

      {/* Summary */}
      <div className="mt-6 bg-blue-50 dark:bg-blue-900/20 rounded-lg p-4">
        <p className="text-sm text-blue-800 dark:text-blue-300">
          <strong>{changedCount}</strong> {t('audit:fieldsChanged')}
        </p>
      </div>
    </>
  );
}
