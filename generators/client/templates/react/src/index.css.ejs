@import 'tailwindcss';
@font-face {
  font-family: 'IBMPlexMono';
  font-style: normal;
  font-weight: 100 900;
  font-display: swap;
  src: url('/fonts/IBMPlexMono-Regular.ttf') format('truetype');
}
@font-face {
  font-family: 'InterVariable';
  font-style: normal;
  font-weight: 100 900;
  font-display: swap;
  src: url('/fonts/InterVariable.woff2?v=4.1') format('woff2');
}
@font-face {
  font-family: 'InterVariable';
  font-style: italic;
  font-weight: 100 900;
  font-display: swap;
  src: url('/fonts/InterVariable-Italic.woff2?v=4.1') format('woff2');
}
@custom-variant dark (&:where(.dark, .dark *));
@theme {
  --default-ring-width: 3px;
  --default-ring-color: var(--color-blue-500);
  --font-sans: InterVariable, sans-serif;
  --font-mono: IBMPlexMono, monospace;
}
@layer base {
  * {
    @apply dark:scheme-dark;
  }
  body {
    @apply bg-white dark:bg-gray-900 text-gray-900 dark:text-white min-h-screen;
  }
  .kdb-shortcut {
    @apply font-sans text-xs h-5 min-w-5 items-center justify-center rounded border px-1 hidden xl:inline-flex;
  }
  .kdb-shortcut + .kdb-shortcut {
    @apply -ml-0.5;
  }
  .primary-button {
    @apply inline-flex items-center gap-1 cursor-pointer rounded-md border border-transparent bg-blue-600 hover:bg-blue-700 py-1.5 px-4 text-sm font-medium text-white shadow-sm focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 disabled:opacity-50;
  }
  .danger-button {
    @apply inline-flex items-center gap-1 cursor-pointer rounded-md border border-transparent bg-red-600 hover:bg-red-700 dark:bg-red-500 hover:dark:bg-red-600 py-1.5 px-4 text-sm font-medium text-white shadow-sm focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 disabled:opacity-50;
  }
  .cancel-button {
    @apply inline-flex items-center gap-1 cursor-pointer rounded-md border border-transparent bg-white dark:bg-transparent py-1.5 px-4 text-sm font-medium shadow-sm hover:bg-gray-50 hover:dark:bg-gray-800 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 disabled:opacity-50;
  }
  .text-link {
    @apply rounded-md text-sky-600 dark:text-sky-400 hover:underline decoration-2 cursor-pointer focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600;
  }
  .text-muted {
    @apply text-slate-400 dark:text-slate-500;
  }
  .nav-bar {
    @apply relative z-9999 flex flex-wrap items-center justify-between gap-4 h-16 px-4 text-slate-800 dark:text-gray-300 bg-<%- navbarStartcolor %>-400 dark:bg-<%- navbarStartcolor %>-800 ltr:bg-linear-45 rtl:-bg-linear-45 from-20% from-<%- navbarStartcolor %>-400 dark:from-<%- navbarStartcolor %>-800 via-sky-500 dark:via-sky-800 via-40% to-indigo-700 dark:to-indigo-900 to-80%;

    .nav-bar-link {
      @apply inline-flex items-center justify-center gap-1 rounded-md px-3 py-2 text-sm font-medium bg-slate-100/70 text-slate-900 dark:bg-gray-900/70 dark:text-gray-300 hover:ring-4 focus:outline-none focus-visible:ring-4 cursor-pointer;
    }
    button {
      @apply cursor-pointer;
    }
  }
  .data-table {
    @apply w-full table-auto text-sm text-left rtl:text-right mb-5;
    thead {
      @apply text-xs uppercase text-gray-700 bg-gray-200 dark:bg-gray-700 dark:text-gray-400;
      th {
        @apply px-6 py-3;
      }
    }
    tbody {
      td {
        @apply px-6 py-4 truncate max-w-50;
      }
      tr {
        @apply odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700 border-gray-200;
      }
    }
  }
  .details-table {
    @apply w-full table-auto text-sm text-left rtl:text-right;
    thead {
      @apply text-xs uppercase text-gray-700 bg-gray-200 dark:bg-gray-700 dark:text-gray-400;
      th {
        @apply px-6 py-3;
      }
    }
    tbody {
      th {
        @apply px-6 py-4 text-right text-nowrap uppercase w-0;
      }
      td {
        @apply px-6 py-4;
      }
      tr {
        @apply border-b dark:border-gray-700 border-gray-200;
      }
    }
  }
}
