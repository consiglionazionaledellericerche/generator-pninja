@import 'tailwindcss';
@font-face {
  font-family: 'IBMPlexMono';
  font-style: normal;
  font-weight: 100 900;
  font-display: swap;
  src: url('/fonts/IBMPlexMono-Regular.ttf') format('truetype');
}
@font-face {
  font-family: 'InterVariable';
  font-style: normal;
  font-weight: 100 900;
  font-display: swap;
  src: url('/fonts/InterVariable.woff2?v=4.1') format('woff2');
}
@font-face {
  font-family: 'InterVariable';
  font-style: italic;
  font-weight: 100 900;
  font-display: swap;
  src: url('/fonts/InterVariable-Italic.woff2?v=4.1') format('woff2');
}
@custom-variant dark (&:where(.dark, .dark *));
@theme {
  --default-ring-width: 3px;
  --default-ring-color: var(--color-blue-500);
  --font-sans: InterVariable, sans-serif;
  --font-mono: IBMPlexMono, monospace;
}
@layer base {
  * {
    @apply dark:scheme-dark;
  }
  body {
    @apply bg-slate-50 text-slate-900 dark:bg-slate-900 dark:text-slate-100 min-h-screen;
  }
  .kdb-shortcut {
    @apply font-sans text-xs h-5 min-w-5 items-center justify-center rounded border px-1 hidden xl:inline-flex;
  }
  .kdb-shortcut + .kdb-shortcut {
    @apply -ms-0.5;
  }
  .primary-button {
    @apply shadow-sm dark:shadow-sm/70 inline-flex items-center gap-1 cursor-pointer rounded-md border border-transparent bg-blue-600 hover:bg-blue-700 py-1.5 px-4 text-sm font-medium text-white focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 disabled:opacity-50;
  }
  .danger-button {
    @apply shadow-sm dark:shadow-sm/70 inline-flex items-center gap-1 cursor-pointer rounded-md border border-transparent bg-red-600 hover:bg-red-700 dark:bg-red-500 hover:dark:bg-red-600 py-1.5 px-4 text-sm font-medium text-white focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 disabled:opacity-50;
  }
  .cancel-button {
    @apply hover:shadow-sm hover:dark:shadow-sm/70 inline-flex items-center gap-1 cursor-pointer rounded-md border border-transparent bg-transparent dark:bg-transparent py-1.5 px-4 text-sm font-medium hover:bg-slate-300 hover:dark:bg-slate-700 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 disabled:opacity-50;
  }
  .text-link {
    @apply rounded-md text-sky-600 dark:text-sky-400 hover:underline decoration-2 cursor-pointer focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600;
  }
  .text-muted {
    @apply text-slate-400 dark:text-slate-500;
  }
  .nav-bar {
    @apply relative z-9999 flex flex-wrap items-center justify-between gap-4 h-16 px-4 text-slate-800 dark:text-slate-200 bg-<%- navbarStartcolor %>-400 dark:bg-<%- navbarStartcolor %>-800 ltr:bg-linear-45 rtl:-bg-linear-45 from-20% from-<%- navbarStartcolor %>-400 dark:from-<%- navbarStartcolor %>-800 via-sky-500 dark:via-sky-800 via-40% to-indigo-700 dark:to-indigo-900 to-80%;

    .nav-bar-link {
      @apply inline-flex items-center justify-center gap-1 rounded-md px-3 py-2 text-sm font-medium bg-slate-50/70 text-slate-900 dark:bg-slate-900/70 dark:text-slate-100 hover:ring-4 focus:outline-none focus-visible:ring-4 cursor-pointer;
    }
    button {
      @apply cursor-pointer;
    }
  }
  .data-table {
    @apply w-full table-auto text-sm text-left rtl:text-right mb-5;
    thead {
      @apply text-xs uppercase bg-slate-300 text-slate-900 dark:bg-slate-950 dark:text-slate-100;
      th {
        @apply px-6 py-3;
      }
    }
    tbody {
      td {
        @apply px-6 py-4 truncate max-w-50;
      }
      tr {
        @apply odd:bg-slate-100 even:bg-slate-200 text-slate-900 odd:dark:bg-slate-700 even:dark:bg-slate-800 dark:text-slate-100;
      }
    }
  }
  .details-table {
    @apply w-full table-auto text-sm text-left rtl:text-right;
    tbody {
      th {
        @apply px-6 py-4 text-right text-nowrap uppercase w-0;
      }
      td {
        @apply px-6 py-4;
      }
      tr {
        @apply border-b border-slate-300 dark:border-slate-700;
      }
    }
  }
}

*,
.thin-scrollbar {
  scrollbar-width: thin;
  scrollbar-color: #9ca3af transparent;
}

/* Chrome, Edge, Safari */
*::-webkit-scrollbar,
.thin-scrollbar::-webkit-scrollbar {
  width: 6px;
  height: 6px;
}

*::-webkit-scrollbar-thumb,
.thin-scrollbar::-webkit-scrollbar-thumb {
  background-color: #9ca3af;
  border-radius: 9999px;
}

*::-webkit-scrollbar-track,
.thin-scrollbar::-webkit-scrollbar-track {
  background-color: transparent;
}
