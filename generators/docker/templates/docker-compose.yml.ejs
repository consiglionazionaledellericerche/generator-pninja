version: '3.8'

services:
<% if (dbms === 'pgsql') { -%>
  database:
    image: postgres:15
    container_name: <%= slugName %>-database
    environment:
      POSTGRES_DB: <%= snakeName %>
      POSTGRES_USER: <%= snakeName %>_user
      POSTGRES_PASSWORD: <%- dbPwd %>
    ports:
      - '54322:5432'
    volumes:
      - postgres_data:/var/lib/postgresql/data
    networks:
      - <%= slugName %>-network
    healthcheck:
      test: ['CMD-SHELL', 'pg_isready -U <%= snakeName %>_user -d <%= snakeName %>']
      interval: 5s
      timeout: 5s
      retries: 5
<% } else if (dbms === 'mysql' || dbms === 'mariadb') {-%>
  database:
<%  if (dbms === 'mysql') { -%>
    image: mysql:8.0
<%  } -%>
<%  if (dbms === 'mariadb') { -%>
    image: mariadb:10.11
<%  } -%>
    container_name: <%= slugName %>-database
    environment:
      MYSQL_DATABASE: <%= snakeName %>
      MYSQL_USER: <%= snakeName %>_user
      MYSQL_PASSWORD: <%- dbPwd %>
      MYSQL_ROOT_PASSWORD: <%- dbRootPwd %>
    ports:
      - '33066:3306'
    volumes:
<%  if (dbms === 'mysql') { -%>
      - mysql_data:/var/lib/mysql
<%  } -%>
<%  if (dbms === 'mariadb') { -%>
      - mariadb_data:/var/lib/mysql
<%  } -%>
    networks:
      - <%= slugName %>-network
    healthcheck:
      test: ['CMD', 'mysql', '-h', 'localhost', '-u', '<%= snakeName %>_user', '-p<%- dbPwd %>', '-e', 'SELECT 1']
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s
    restart: unless-stopped
<% }-%>

  client:
    build:
      context: ..
      dockerfile: ./docker/nginx/Dockerfile
    container_name: <%= slugName %>-client
    ports:
      - '80:80'
    depends_on:
      - server
    networks:
      - <%= slugName %>-network
    restart: unless-stopped

  server:
    build:
      context: ..
      dockerfile: ./docker/server/Dockerfile
    container_name: <%= slugName %>-server
<% if (dbms !== 'sqlite') { -%>
    depends_on:
      database:
        condition: service_healthy
<% }-%>
    environment:
      - FRONTEND_URL=
    networks:
      - <%= slugName %>-network
    restart: unless-stopped

<% if (dbms !== 'sqlite') { -%>
  adminer:
    image: adminer:4.8.1
    container_name: <%= slugName %>-adminer
    ports:
      - '8088:8080'
    depends_on:
      database:
        condition: service_healthy
    networks:
      - test-application-network
    environment:
      ADMINER_DEFAULT_SERVER: database
      ADMINER_DESIGN: pepa-linha-dark
    restart: unless-stopped
<% }-%>
<% if (dbms === 'pgsql') { -%>

volumes:
  postgres_data:
<% } else if (dbms === 'mysql') {-%>

volumes:
  mysql_data:
<% } else if (dbms === 'mariadb') {-%>

volumes:
  mariadb_data:
<% }-%>

networks:
  <%= slugName %>-network:
    driver: bridge
