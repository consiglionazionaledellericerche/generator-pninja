version: "3"

services:
<% if (dbms === 'pgsql') { -%>
  database:
    image: postgres:15
    container_name: <%= slugName %>-database
    environment:
      POSTGRES_DB: <%= snakeName %>
      POSTGRES_USER: <%= snakeName %>_user
      POSTGRES_PASSWORD: '<%- dbPwd %>'
    ports:
      - "54322:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
    networks:
      - <%= slugName %>-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U <%= snakeName %>_user -d <%= snakeName %>"]
      interval: 5s
      timeout: 5s
      retries: 5
<% } else if (dbms === 'mysql' || dbms === 'mariadb') {-%>
  database:
<%  if (dbms === 'mysql') { -%>
    image: mysql:8.0
<%  } -%>
<%  if (dbms === 'mariadb') { -%>
    image: mariadb:10.11
<%  } -%>
    container_name: <%= slugName %>-database
    environment:
      MYSQL_DATABASE: <%= snakeName %>
      MYSQL_USER: <%= snakeName %>_user
      MYSQL_PASSWORD: '<%- dbPwd %>'
      MYSQL_ROOT_PASSWORD: '<%- dbRootPwd %>'
    ports:
      - "33066:3306"
    volumes:
<%  if (dbms === 'mysql') { -%>
      - mysql_data:/var/lib/mysql
<%  } -%>
<%  if (dbms === 'mariadb') { -%>
      - mariadb_data:/var/lib/mysql
<%  } -%>
    networks:
      - <%= slugName %>-network
    healthcheck:
      test: ["CMD", "mysql", "-h", "localhost", "-u", "<%= snakeName %>_user", "-p<%- dbPwd %>", "-e", "SELECT 1"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s
    restart: unless-stopped

<% }-%>
  client:
    build:
      context: ..
      dockerfile: ./docker/nginx/Dockerfile
    container_name: <%= slugName %>-client
    ports:
      - "80:80"
    depends_on:
      - server
    networks:
      - <%= slugName %>-network
    restart: unless-stopped

  server:
    build:
      context: ..
      dockerfile: ./docker/server/Dockerfile
    container_name: <%= slugName %>-server
    volumes:
      - laravel_storage:/var/www/html/storage
<% if (dbms === 'sqlite') { -%>
      - ./database/database.sqlite:/var/www/html/database/database.sqlite
<% }-%>
<% if (dbms !== 'sqlite' || !['database','algolia', 'null'].includes(searchEngine)) { -%>
    depends_on:
<% }-%>
<% if (dbms !== 'sqlite') { -%>
      database:
        condition: service_healthy
<% }-%>
<% if (searchEngine === 'meilisearch') { -%>
      meilisearch:
        condition: service_healthy
<% }-%>
<% if (searchEngine === 'elastic') { -%>
      elasticsearch:
        condition: service_healthy
<% }-%>
<% if (searchEngine === 'typesense') { -%>
      typesense:
        condition: service_healthy
<% }-%>
<% if (searchEngine === 'solr') { -%>
      solr:
        condition: service_healthy
<% }-%>
    environment:
      - FRONTEND_URL=
    networks:
      - <%= slugName %>-network
    restart: unless-stopped
<% if (searchEngine === 'meilisearch') { -%>

  meilisearch:
    image: getmeili/meilisearch:v1.22
    container_name: <%= slugName %>-meilisearch
    ports:
      - "7700:7700"
    environment:
      - MEILI_MASTER_KEY=<%- meiliMasterKey %>
      - MEILI_ENV=development
      - MEILI_NO_ANALYTICS=true
      - MEILI_MAX_INDEXING_MEMORY=2gb
      - MEILI_MAX_INDEXING_THREADS=4
      - MEILI_LOG_LEVEL=INFO
      - MEILI_HTTP_PAYLOAD_SIZE_LIMIT=104857600  # 100MB
    networks:
      - <%= slugName %>-network   
    volumes:
      - meilisearch_data:/meili_data
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:7700/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

<% }-%>
<% if (searchEngine === 'elastic') { -%>

  elasticsearch:
    image: docker.elastic.co/elasticsearch/elasticsearch:8.11.0
    container_name: <%= slugName %>-elasticsearch
    environment:
      - discovery.type=single-node
      - "ES_JAVA_OPTS=-Xms512m -Xmx512m"
      - xpack.security.enabled=false
      - xpack.security.http.ssl.enabled=false
    volumes:
      - elasticsearch_data:/usr/share/elasticsearch/data
    networks:
      - <%= slugName %>-network
    healthcheck:
      test: ["CMD-SHELL", "curl -f http://localhost:9200 || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 5
    restart: unless-stopped

  kibana:
    image: docker.elastic.co/kibana/kibana:8.11.0
    container_name: <%= slugName %>-kibana
    ports:
      - '5601:5601'
    environment:
      - ELASTICSEARCH_HOSTS=http://elasticsearch:9200
    networks:
      - <%= slugName %>-network
    depends_on:
      elasticsearch:
        condition: service_healthy
<% }-%>
<% if (searchEngine === 'typesense') { -%>

  typesense:
    image: typesense/typesense:27.1
    container_name: <%= slugName %>-typesense
    environment:
      - TYPESENSE_API_KEY=<%- typesenseApiKey %>
      - TYPESENSE_DATA_DIR=/data
    ports:
      - '8188:8108'
    volumes:
      - typesense_data:/data
    networks:
      - <%= slugName %>-network
    command: "--data-dir /data --api-key=<%- typesenseApiKey %> --enable-cors"
    healthcheck:
      test: ["CMD-SHELL", "cat /proc/net/tcp | grep -q 1FAC || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s
    restart: unless-stopped
<% }-%>
<% if (searchEngine === 'solr') { -%>

  solr:
    image: solr:9
    container_name: <%= slugName %>-solr
    ports:
      - "8984:8983"
    volumes:
      - solr_data:/var/solr
    networks:
      - <%= slugName %>-network
    entrypoint:
      - bash
      - "-c"
      - |
        if [ ! -d "/var/solr/data/configsets/_default" ]; then
          mkdir -p /var/solr/data/configsets
          cp -r /opt/solr/server/solr/configsets/_default /var/solr/data/configsets/
        fi
        exec solr-foreground
    healthcheck:
      test: ["CMD-SHELL", "curl -sf http://localhost:8983/solr/admin/info/system?wt=json || exit 1"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s
    restart: unless-stopped
<% }-%>
volumes:
  laravel_storage:
<% if (dbms === 'pgsql') { -%>
  postgres_data:
<% } else if (dbms === 'mysql') {-%>
  mysql_data:
<% } else if (dbms === 'mariadb') {-%>
  mariadb_data:
<% } -%>
<% if (searchEngine === 'elastic') {-%>
  elasticsearch_data:
    driver: local
<% } -%>
<% if (searchEngine === 'meilisearch') {-%>
  meilisearch_data:
    driver: local
<% } -%>
<% if (searchEngine === 'typesense') {-%>
  typesense_data:
    driver: local
<% } -%>
<% if (searchEngine === 'solr') {-%>
  solr_data:
    driver: local
<% } -%>
networks:
  <%= slugName %>-network:
    driver: bridge
