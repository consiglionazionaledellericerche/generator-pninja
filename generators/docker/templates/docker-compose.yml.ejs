version: "3"

services:
<% if (dbms === 'pgsql') { -%>
  database:
    image: postgres:15
    container_name: <%= slugName %>-database
    environment:
      POSTGRES_DB: <%= snakeName %>
      POSTGRES_USER: <%= snakeName %>_user
      POSTGRES_PASSWORD: <%- dbPwd %>
    ports:
      - "54322:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
    networks:
      - <%= slugName %>-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U <%= snakeName %>_user -d <%= snakeName %>"]
      interval: 5s
      timeout: 5s
      retries: 5
<% } else if (dbms === 'mysql' || dbms === 'mariadb') {-%>
  database:
<%  if (dbms === 'mysql') { -%>
    image: mysql:8.0
<%  } -%>
<%  if (dbms === 'mariadb') { -%>
    image: mariadb:10.11
<%  } -%>
    container_name: <%= slugName %>-database
    environment:
      MYSQL_DATABASE: <%= snakeName %>
      MYSQL_USER: <%= snakeName %>_user
      MYSQL_PASSWORD: <%- dbPwd %>
      MYSQL_ROOT_PASSWORD: <%- dbRootPwd %>
    ports:
      - "33066:3306"
    volumes:
<%  if (dbms === 'mysql') { -%>
      - mysql_data:/var/lib/mysql
<%  } -%>
<%  if (dbms === 'mariadb') { -%>
      - mariadb_data:/var/lib/mysql
<%  } -%>
    networks:
      - <%= slugName %>-network
    healthcheck:
      test: ["CMD", "mysql", "-h", "localhost", "-u", "<%= snakeName %>_user", "-p<%- dbPwd %>", "-e", "SELECT 1"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s
    restart: unless-stopped

<% }-%>
  client:
    build:
      context: ..
      dockerfile: ./docker/nginx/Dockerfile
    container_name: <%= slugName %>-client
    ports:
      - "80:80"
    depends_on:
      - server
    networks:
      - <%= slugName %>-network
    restart: unless-stopped

  server:
    build:
      context: ..
      dockerfile: ./docker/server/Dockerfile
    container_name: <%= slugName %>-server
    volumes:
      - laravel_storage:/var/www/html/storage
<% if (dbms !== 'sqlite' || searchEngine === 'elastic') { -%>
    depends_on:
<% }-%>
<% if (dbms !== 'sqlite') { -%>
      - database
<% }-%>
<% if (searchEngine === 'elastic') { -%>
      - elasticsearch
<% }-%>
    environment:
      - FRONTEND_URL=
<% if (dbms === 'sqlite') { -%>
    volumes:
      - ./database/database.sqlite:/var/www/html/database/database.sqlite
<% }-%>
    networks:
      - <%= slugName %>-network
    restart: unless-stopped
<% if (searchEngine === 'elastic') { -%>

  elasticsearch:
    image: docker.elastic.co/elasticsearch/elasticsearch:8.11.0
    container_name: <%= slugName %>-elasticsearch
    environment:
      - discovery.type=single-node
      - "ES_JAVA_OPTS=-Xms512m -Xmx512m"
      - xpack.security.enabled=false
      - xpack.security.http.ssl.enabled=false
    ports:
      - "9201:9200"
      - "9301:9300"
    volumes:
      - elasticsearch_data:/usr/share/elasticsearch/data
    networks:
      - <%= slugName %>-network
    healthcheck:
      test: ["CMD-SHELL", "curl -f http://localhost:9200 || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 5
    restart: unless-stopped
<% }-%>
volumes:
  laravel_storage:
<% if (dbms === 'pgsql') { -%>
  postgres_data:
<% } else if (dbms === 'mysql') {-%>
  mysql_data:
<% } else if (dbms === 'mariadb') {-%>
  mariadb_data:
<% } -%>
<% if (searchEngine === 'elastic') {-%>
  elasticsearch_data:
    driver: local
<% } -%>
networks:
  <%= slugName %>-network:
    driver: bridge
