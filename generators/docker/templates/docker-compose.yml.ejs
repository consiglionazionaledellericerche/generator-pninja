version: '3.8'

services:
  <%= name %>-client:
    build:
      context: .
      dockerfile: ./nginx/Dockerfile
    ports:
      - '80:80'
    depends_on:
      - php-app
    networks:
      - <%= name %>-network

  <%= name %>-server:
    build:
      context: ./server
      dockerfile: Dockerfile
    environment:
      - FRONTEND_URL=
    networks:
      - <%= name %>-network
networks:
  <%= name %>-network:
    driver: bridge
