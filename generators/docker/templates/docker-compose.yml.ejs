version: '3.8'

services:
<% if (dbms === 'pgsql') { -%>
  <%= slugName %>-database:
    image: postgres:15
    container_name: <%= slugName %>-database
    environment:
      POSTGRES_DB: <%= snakeName %>
      POSTGRES_USER: <%= snakeName %>_user
      POSTGRES_PASSWORD: <%- dbPwd %>
    ports:
      - '54322:5432'
    volumes:
      - postgres_data:/var/lib/postgresql/data
    networks:
      - <%= slugName %>-network
    healthcheck:
      test: ['CMD-SHELL', 'pg_isready -U <%= snakeName %>_user -d <%= snakeName %>']
      interval: 5s
      timeout: 5s
      retries: 5
<% } else if (dbms === 'mysql' || dbms === 'mariadb') {-%>
  <%= slugName %>-database:
<%  if (dbms === 'mysql') { -%>
    image: mysql:8.0
<%  } -%>
<%  if (dbms === 'mariadb') { -%>
    image: mariadb:10.11
<%  } -%>
    container_name: <%= slugName %>-database
    environment:
      MYSQL_DATABASE: <%= snakeName %>
      MYSQL_USER: <%= snakeName %>_user
      MYSQL_PASSWORD: <%- dbPwd %>
      MYSQL_ROOT_PASSWORD: <%- dbRootPwd %>
    ports:
      - '33066:3306'
    volumes:
<%  if (dbms === 'mysql') { -%>
      - mysql_data:/var/lib/mysql
<%  } -%>
<%  if (dbms === 'mariadb') { -%>
      - mariadb_data:/var/lib/mysql
<%  } -%>
    networks:
      - <%= slugName %>-network
    healthcheck:
      test: ['CMD', 'mysql', '-h', 'localhost', '-u', '<%= snakeName %>_user', '-p<%- dbPwd %>', '-e', 'SELECT 1']
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s
<% }-%>

  <%= slugName %>-client:
    build:
      context: ..
      dockerfile: ./docker/nginx/Dockerfile
    container_name: <%= slugName %>-client
    ports:
      - '80:80'
    depends_on:
      - <%= slugName %>-server
    networks:
      - <%= slugName %>-network

  <%= slugName %>-server:
    build:
      context: ..
      dockerfile: ./docker/server/Dockerfile
    container_name: <%= slugName %>-server
    depends_on:
      <%= slugName %>-database:
        condition: service_healthy
    environment:
      - FRONTEND_URL=
    networks:
      - <%= slugName %>-network

<% if (dbms === 'pgsql') { -%>
volumes:
  postgres_data:
<% } else if (dbms === 'mysql') {-%>
volumes:
  mysql_data:
<% } else if (dbms === 'mariadb') {-%>
volumes:
  mariadb_data:
<% }-%>

networks:
  <%= slugName %>-network:
    driver: bridge
